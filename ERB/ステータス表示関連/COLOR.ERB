;----------------------------------------------------------
;着色布丁ト関数
;直前まで使用していた色とフォントを保存し、使用後はそちらに復帰するように
;表示形式           0=通常,1=PRINTL,2=PRINTW,3=PRINTPLAIN
;フォントス磚瓦   0=通常,1=太字,2=斜体,4=打ち消し線,8=下線
;(ビットで管理されているため例えば3なら太字＋斜体)
;----------------------------------------------------------
@COLORMESSAGE(ARGS, 色, 表示形式, フォントス磚瓦)
#DIM 現在指定の色
#DIM 現在指定のフォントス磚瓦
#DIM 色
#DIM フォントス磚瓦
#DIM 表示形式

現在指定の色 = GETCOLOR()
現在指定のフォントス磚瓦 = GETSTYLE()

SIF フォントス磚瓦
	FONTSTYLE フォントス磚瓦
SETCOLOR 色
SELECTCASE 表示形式
	CASE 0
		PRINTFORM %ARGS%
	CASE 1
		PRINTFORML %ARGS%
	CASE 2
		PRINTFORMW %ARGS%
	CASE 3
		PRINTPLAINFORM %ARGS%
ENDSELECT
SETCOLOR 現在指定の色
FONTSTYLE 現在指定のフォントス磚瓦

;条件を満たしていた場合に黄色をつける
@COND_COLORMESSAGE(COND,MESSAGE)
#DIM COND
#DIMS MESSAGE
SIF COND
	SETCOLOR C_YELLOW
PRINTFORML %MESSAGE%
RESETCOLOR

;-------------------------------------------------------------------------------
;    BARの色違え版
;-------------------------------------------------------------------------------
;    例  PRINTFORM %PRINT_COLORBAR(40,100,8,%UNICODE(0x2584)%,%UNICODE(0x2584)%,,0x404040)% 
;        [===     ]
;    引数はBARとほぼ一緒 + ARGSで描写文字の変更が可能(指定しない場合はBARと同じ仕様)
;    ARG:3はバーの色(0xFFFFFF形式で指定),ARG:4はバーの背景色(0xFFFFFF形式で指定)
;===============================================================================
@PRINT_COLORBAR(ARG, ARG:1, ARG:2, ARGS = "*", ARGS:1 = ".", ARG:3, ARG:4)
#LOCALSIZE 5
SIF ARG:1 <= 0
	ARG:1 = 1
LOCAL:1 = ARG * ARG:2 / ARG:1
LOCAL:2 = GETCOLOR()
FOR LOCAL, 1, ARG:2 + 1
	IF LOCAL:1 >= LOCAL
		IF !LOCAL:3
			SETCOLOR ARG:3
			LOCAL:3 = 1
		ENDIF
		PRINTFORM %ARGS%
	ELSE
		IF !LOCAL:4
			SETCOLOR ARG:4
			LOCAL:4 = 1
		ENDIF
		PRINTFORM %ARGS:1%
	ENDIF
NEXT
SETCOLOR LOCAL:2
VARSET LOCAL

