;收藏表示文字列
@COLLECTION_B_PANTS_STR(対象, 種類, 所有数)
#FUNCTIONS
#DIM  対象
#DIM  種類
#DIM  所有数
#DIMS 条件
#DIMS 胖次文字列
IF 所有数
	胖次文字列 '= @"%PANTSNAME(種類,対象),22,LEFT%{LIMIT(所有数, 0, 999),3}枚" + "　"
ELSE
	条件 '= GET_STR(対象, "下半身内衣_ずらし可能", 種類, "收藏解禁条件")
	IF 種類 == 18
		条件 '= "？？？？？"
		;付与文字列は「XXX枚　」で全角3+半角1
		胖次文字列 '= @"%条件,22,LEFT%" + " " + "　" * 3
	ELSEIF STRLENS(条件)
		胖次文字列 '= @"%条件,22,LEFT%" + " " + "　" * 3
	ELSE
		胖次文字列 '= @"%PANTSNAME(種類,対象),22,LEFT%" + " " + "　" * 3
	ENDIF
ENDIF
RETURNF 胖次文字列
