@DAILY_CONDITION_EV22
#DIM YOME
#DIM CHILDNUM
SIF CMATCH(TALENT:育児中, 0) == CHARANUM
	RETURN -1
SIF RAND:5 > 0
	RETURN -1
YOME = 0
CALL FISHER_YATES_SHAFFLE(CHARANUM - 1)
FOR LOCAL:10, 0, CHARANUM - 1
	LOCAL = SHAFFLE_ARRAY:(LOCAL:10) + 1
	IF CHK_HAVE_CHILD(LOCAL,CHILD_就学,CHILD_自立) > 0
		YOME = LOCAL
		CHILDNUM = CHK_HAVE_CHILD(LOCAL,CHILD_就学,CHILD_自立)
		BREAK
	ENDIF
NEXT
IF YOME
	CALL DAILY_EV22(YOME,CHILDNUM)
	RETURN 1
ELSE
	RETURN -1
ENDIF


@DAILY_EV22(YOME,CHILDNUM)
#DIM YOME
#DIM CHILDNUM
#DIM 慰謝料

PRINTFORM 從%CALLNAME:YOME%、傳來了%CHILDNAME:YOME:CHILDNUM%

IF !RAND:4
	PRINTFORMW 弄傷了其他小孩的消息……
	PRINTFORML 就算是沒有惡意、%CHILDNAME:YOME:CHILDNUM%的力量対普通人來說也很容易造成傷害
	PRINTFORML 向家長謝罪之後讓%CHILDNAME:YOME:CHILDNUM%必須好好聽話……
	PRINTFORML %CALLNAME:MASTER%心情有些沉重
	PRINTFORML 
	CALL KOJO_MESSAGE_SEND("EVENT", 0, YOME, CHILDNUM, 0, "CHILD_DAILY_寺子屋", "怪我させた")
	慰謝料 = MIN(10000,MONEY)
	MONEY -= 慰謝料
	CALL COLORMESSAGE(@"向対方支付了{慰謝料}治療費",C_YELLOW,1,1)
	CALL COLORMESSAGE(@"%CALLNAME:MASTER%的気力暫時減少了",C_YELLOW,1,1)
	CALL BUFF_BASE(MASTER,BASE_気力,-1000)
ELSE
	PRINTFORMW 傳來了孩子被表揚的消息……
	PRINTFORML 不愧是我家的孩子！
	PRINTFORML 
	CALL KOJO_MESSAGE_SEND("EVENT", 0, YOME, CHILDNUM, 0, "CHILD_DAILY_寺子屋", "褒められた")
	CALL COLORMESSAGE(@"%CALLNAME:MASTER%的気力暫時增加了",C_YELLOW,1,1)
	CALL BUFF_BASE(MASTER,BASE_気力,1000)
ENDIF
PRINTW 
