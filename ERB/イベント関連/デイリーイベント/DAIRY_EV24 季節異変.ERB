@DAILY_CONDITION_EV24

SIF RAND:15 > 0
	RETURN -1
SIF DAY:3 >= 30
	RETURN -1

CALL DAILY_EV24
RETURN 1

@DAILY_EV24
PRINTFORMW 是季節異変！
FOR LOCAL,1,CHARANUM
	IF TALENT:LOCAL:妖精
		CALL BUFF_BASE(LOCAL,BASE_体力,300)
		CALL BUFF_BASE(LOCAL,BASE_気力,300)
	ENDIF
NEXT
GatheringSeason = DAY:2 + 2
SIF GatheringSeason > 4
	GatheringSeason -= 4
PRINTFORMW 妖精们的体力与気力上升、并且可以採集%GET_MONTH(GatheringSeason)%的素材了！