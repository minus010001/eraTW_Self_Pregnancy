#DIM RANK_FORTUNE
#DIM お相手
#DIM SKIP_FLAG
#DIMS くじ枚数,300

IF MATCH(MORIYA_BOX, 0) >= 2 && STRLENS(SAVESTR:9)
	SPLIT SAVESTR:9, ",", くじ枚数
	FOR LOCAL:0, 0, 300
		MORIYA_BOX:(LOCAL:0) = TOINT(くじ枚数:(LOCAL:0))
	NEXT
	SAVESTR:9 = ""
ENDIF

