;道具の初期在庫処理
FOR LOCAL, 0, 1000
	CALL ITEMDATA(LOCAL, "SHOP:食料品店")
	RESULT:1 = RESULT
	CALL ITEMDATA(LOCAL, "SHOP:酒屋")
	RESULT:2 = RESULT
	CALL ITEMDATA(LOCAL, "SHOP:花屋")
	RESULT:3 = RESULT
	CALL ITEMDATA(LOCAL, "SHOP:八百屋")
	RESULT:4 = RESULT
	IF RESULT:1 && !ITEMSALES:LOCAL
		ITEMSALES:LOCAL = 10
	ELSEIF RESULT:2 && !ITEMSALES:LOCAL
		ITEMSALES:LOCAL = 5
	ELSEIF RESULT:3 && !ITEMSALES:LOCAL
		ITEMSALES:LOCAL = 3
	ELSEIF RESULT:4 && !ITEMSALES:LOCAL
		ITEMSALES:LOCAL = 5
	ENDIF
NEXT

