	CASE 0
		MAXBASE:ARG:体力 -= 100
	CASE 1
		MAXBASE:ARG:体力 += 100
	CASE 2
		MAXBASE:ARG:気力 -= 100
	CASE 3
		MAXBASE:ARG:気力 += 100
	CASE 4
ENDSELECT
