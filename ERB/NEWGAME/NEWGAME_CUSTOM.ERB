	CFLAG:ARG:処女喪失記念日 = 0
	CFLAG:ARG:処女喪失対象 = 0
;非処女はV経験１
ELSEIF TALENT:ARG:2 & 1 && EXP:ARG:Ｖ経験 == 0
	EXP:ARG:Ｖ経験 = 1
ENDIF

;初吻
IF !EXP:ARG:接吻経験
	TALENT:ARG:無接吻経験 = 1
ELSE
	TALENT:ARG:無接吻経験 = 0
ENDIF


