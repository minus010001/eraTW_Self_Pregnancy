@VIRGIN_SET
#DIMS choices, 11
PRINTL 
PRINTL 在游戏開始前可以変更各角色的処女・非処女
PRINTL 全体設定即可对所有人生効
DRAWLINE
VARSET choices
choices:0 '= "個別設定"
choices:1 '= "全员都不知道什么叫做爱"
choices:2 '= "你是笨蛋吗肯定得全员处女啊"
choices:3 '= "幻想少女很長寿所以肯定経験豊富吧"
choices:4 '= "干脆全部都变的风骚吧"
choices:5 '= "雖然全員都是処女但是褲腰帯都很鬆"
SIF 全員の貞操
	choices:全員の貞操 '= "<font color='#67e47e'>(有効)</font>" + choices:全員の貞操
SIF 全員の貞操 ||SUMCARRAY(初期貞操)
	choices:10 '= "全員恢复初期設定"

CALL ASK_CHOICES(choices, 100, "结束")
SELECTCASE RESULT
	;システム
	CASE 0
		CALL SET_VIRGINITY
	CASE 10
		CVARSET 初期貞操
		VARSET 全員の貞操
		PRINTW 在全員初始设定的状態下開始游戏。
	CASE 100
		PRINTW 設定完毕。
		RETURN
	CASE IS == 全員の貞操
		全員の貞操 = 0
		PRINTW 全体設定無効了。
	;貞操
	CASE 1
		全員の貞操 = RESULT
		PRINTW 小兎姫在此。
		PRINTW 在全員無知処女的状態下開始游戏。
	CASE 2
		全員の貞操 = RESULT
		PRINTW 你个処女厨！
		PRINTW 在全員処女的状態下開始游戏。
	CASE 3
		全員の貞操 = RESULT
		PRINTW 在全員非処女的状態下開始游戏。
	CASE 4
		全員の貞操 = RESULT
		PRINTW 在全員风骚的状態下開始游戏。
	CASE 5
		PRINTFORMW 麻烦的家伙。
		全員の貞操 = RESULT
		PRINTW 在全員风骚処女的状態下開始游戏。
	CASEELSE
		THROW 無效輸入。
ENDSELECT
RESTART

;-----------------------------------------------------------
;個別設定
;-----------------------------------------------------------
@SET_VIRGINITY
#DIM CHARA_ID
FOR CHARA_ID, 0, CHARANUM
	SIF !IS_NAMED(CHARA_ID)
		CONTINUE
	SIF TALENT:CHARA_ID:処女
		SETCOLOR C_PINK
	SIF TALENT:CHARA_ID:風騷
		SETCOLOR C_P_BLUE
	LOCALS '= @"[{CHARA_ID, 3}] %SET_VIRGINITY_KEY(初期貞操:CHARA_ID:0)%%CALLNAME:CHARA_ID%"
	PRINTFORMLC %LOCALS%
	RESETCOLOR
NEXT
PRINTL
DRAWLINE
PRINTL [999] 設定終了
DO
	INPUT
	CHARA_ID = RESULT
	SELECTCASE CHARA_ID
		CASE 999
			PRINTW 個別設定完畢。
			RETURN
		CASEELSE
			IF !IS_NAMED(CHARA_ID)
				CLEARLINE 1
				CONTINUE
			ENDIF
			BREAK
	ENDSELECT
LOOP 1

初期貞操:CHARA_ID:0 ++
SIF 初期貞操:CHARA_ID:0 >= 6
	初期貞操:CHARA_ID:0 = 0

SELECTCASE 初期貞操:CHARA_ID:0
	CASE 0
		PRINTFORMW %CALLNAME:CHARA_ID%的能力恢復為了初期設定
	CASE 1
		PRINTFORMW %CALLNAME:CHARA_ID%变成無知処女了
	CASE 2
		PRINTFORMW %CALLNAME:CHARA_ID%変成処女了
	CASE 3
		PRINTFORMW %CALLNAME:CHARA_ID%変成非処了
	CASE 4
		PRINTFORMW %CALLNAME:CHARA_ID%変得风骚了
	CASE 5
		PRINTFORMW %CALLNAME:CHARA_ID%变成风骚処女了
	CASEELSE
		THROW 貞操設定不適切
ENDSELECT
RESTART
;-----------------------------------------------------------
;設定略語
;-----------------------------------------------------------
@SET_VIRGINITY_KEY(ARG)
#FUNCTIONS
SELECTCASE ARG
	CASE 0
		RETURNF ""
	CASE 1
		RETURNF "[無知]"
	CASE 2
		RETURNF "[処女]"
	CASE 3
		RETURNF "[熟練]"
	CASE 4
		RETURNF "[风骚]"
	CASE 5
		RETURNF "[骚処]"
	CASEELSE
		THROW 貞操設定不適切
ENDSELECT
;-----------------------------------------------------------
;処女設定適用
;-----------------------------------------------------------
@VIRGIN_SET_APPLY
FOR LOCAL, 1, CHARANUM
	IF 初期貞操:LOCAL:0
		CALL VIRGIN_SET_APPLY_PART(LOCAL, 初期貞操:LOCAL:0)
	ELSE
		CALL VIRGIN_SET_APPLY_PART(LOCAL, 全員の貞操)
	ENDIF
NEXT

;-----------------------------------------------------------
;-----------------------------------------------------------
@VIRGIN_SET_APPLY_PART(ARG, ARG:1)
SELECTCASE ARG:1
	CASE 0
	CASE 1
		CALL SET_VIRGIN(ARG:1)
		TALENT:ARG:無知 = 1
	CASE 2
		CALL SET_VIRGIN(ARG)
	CASE 3
		CALL SET_WELL_EXP(ARG)
	CASE 4
		CALL SET_YARIMAN(ARG)
	CASE 5
		CALL SET_VIRGIN(ARG)
		SIF TALENT:ARG:性別嗜好 == 1
			TALENT:ARG:性別嗜好 = 0
		ABL:ARG:欲望 = 3
		TALENT:ARG:風騷 = 1
		TALENT:ARG:貞操 = -1
CASEELSE
	THROW 貞操設定不適切
ENDSELECT

