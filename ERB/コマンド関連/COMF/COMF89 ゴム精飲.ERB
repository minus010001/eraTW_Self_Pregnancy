;-------------------------------------------------
;喝套内精液
;道具使用指令、レベル2
;-------------------------------------------------
@COM89
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
SELECTCASE TFLAG:套套内
	CASE IS > 300
		EXP:精液経験 += 8
	CASE IS > 150
		EXP:精液経験 += 5
	CASEELSE
		EXP:精液経験 += 3
ENDSELECT
STAIN:口 |= 4
IF FLAG:時間停止 == 1
	CFLAG:口内精液 = 2
ELSE
	CFLAG:口内精液 = 1
ENDIF
CFLAG:累計精飲 += TFLAG:套套内
TFLAG:193 = TFLAG:套套内

;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
ELSE

	DOWNBASE:気力 += 100

	SOURCE:情愛 = TFLAG:套套内 / 2
	SOURCE:性行動 = TFLAG:套套内 / 2
	SOURCE:達成 = TFLAG:套套内 / 2
	SOURCE:屈従 = TFLAG:套套内 * 2
	SOURCE:不潔 = TFLAG:套套内 * 2
	SOURCE:反感 = TFLAG:套套内

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 400
ENDIF
TFLAG:套套内 = 0
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
;喝套内精液
@COM_ABLE89
;実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(89)
	RETURN RESULT
SIF !TFLAG:套套内
	RETURN 0
;口球使用中は不可
SIF TEQUIP:口球
	RETURN 0
SIF ABL:精液中毒 < 3 && !FLAG:70
	RETURN 0
RETURN 1

