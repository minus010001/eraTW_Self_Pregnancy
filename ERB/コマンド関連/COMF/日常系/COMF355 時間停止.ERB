@COM355
FOR LOCAL, 1, GET_TARGETNUM() + 1
	SIF CHK_DATENOW(CFLAG:LOCAL:约会中)
		CONTINUE
	CFLAG:(TARGET:LOCAL):同行 = 0
	SIF EX:(TARGET:LOCAL):処女喪失记号 == 1
		EX:(TARGET:LOCAL):処女喪失记号 = 0
NEXT
SIF !CHK_DATENOW(CFLAG:MASTER:约会中)
	CFLAG:MASTER:同行 = 0
FLAG:時間停止 = 1
SETBGCOLOR C_THE_WORLD

RETURN 1

