@COM_ABLE301
;泡茶実行判定
SIF !TFLAG:100
	RETURN 0
SIF TFLAG:131
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(301)
	RETURN RESULT
;二時間間隔
;SIF TIME_PROGRESS(TCVAR:300) < 120
;魔改二次泡茶时间
SIF TIME_PROGRESS(TCVAR:300) < 60
	RETURN 0
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;陪睡中
SIF CFLAG:陪睡中
	RETURN 0
;浴場
;SIF CFLAG:MASTER:現在位置 == 13 || CFLAG:MASTER:現在位置 == 24 || CFLAG:MASTER:現在位置 == 30 || CFLAG:MASTER:現在位置 == 39
SIF BATHCHECK(CFLAG:MASTER:現在位置)
	RETURN 0
;宴会中
SIF CFLAG:350 == 49
	RETURN 0
;约会中
SIF CHK_DATENOW(CFLAG:约会中) && CFLAG:現在位置 != OMANEKIBEYA()
	RETURN 0
;外出先で実行時は親密3を要求
SIF (GET_MAPID(CFLAG:MASTER:現在位置) != MAIN_MAP) && ABL:親密 < 3
	RETURN 0
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
;停止中は不可
SIF FLAG:70
	RETURN 0
RETURN 1

