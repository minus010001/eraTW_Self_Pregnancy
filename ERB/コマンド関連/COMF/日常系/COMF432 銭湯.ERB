					GOTO LOOP_titei
				ELSEIF FLAG:约会的对象
					PRINTL 「你这家伙、现在最好放弃喵呀？」
					PRINTW 「旁边的女孩、一脸你疯了的表情呀…」
					CLEARLINE 2
					GOTO LOOP_titei
				ELSEIF GETBIT(TFLAG:一日一回, 9)
					PRINTL 「……哦呀？」
					PRINTW 「抱歉呀、喵桑。现在房间有客人喵」
					CLEARLINE 2
					GOTO LOOP_titei
				ELSEIF (TARGET > 0 && CFLAG:TARGET:態度 > 0 && !CFLAG:TARGET:睡眠) || CFLAG:MASTER:同行
					PRINTL 「抱歉呀、喵桑」
					PRINTW 「这个Plan呀、是单人份的喵！」
					CLEARLINE 2
					GOTO LOOP_titei
				ENDIF
				CALL INVITE_NEWPLAN
				SIF RESULT < 2
					RETURN RESULT
				LOCAL = 1
				GOTO OFURO
			CASEELSE
				CLEARLINE 1
				GOTO LOOP_titei
		ENDSELECT
	ENDIF
