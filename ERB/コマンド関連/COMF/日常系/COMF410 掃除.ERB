;自動掃除
@AUTO_SWEEP
#DIM SWEEPID
#DIM 掃除前的污垢
#DIM 掃除後的污垢
#DIM 清掃力
#DIM 掃除量
#DIM 掃除骰子

;一人でいる場合、出発地点を掃除
[IF_DEBUG]
PRINTFORML 自動掃除フラグ:{GETBIT(FLAG:自動掃除, 1)}、同行：{CFLAG:MASTER:同行}
[ENDIF]
IF (GETBIT(FLAG:自動掃除, 1) && !CFLAG:MASTER:同行)

	SWEEPID = CFLAG:MASTER:現在位置

	;汚れの主観スキップ判定
	IF YOGORE:SWEEPID < OSOUJI_LIMIT(MASTER)
		RETURN -1
	ENDIF
	
	;体力気力0ならスキップ
	IF (BASE:MASTER:体力 == 0 || BASE:MASTER:気力 == 0)
		RETURN -1
	ENDIF
	
	;掃除処理
	清掃力 = (2 + ABL:MASTER:清掃技能 + 3 * TALENT:MASTER:清掃中毒)
	
	;特制竹箒による補正
	SELECTCASE ITEM:特制竹箒
		CASE 1
			清掃力 += 2
		CASE 2
			清掃力 += 3
		CASE 3
			清掃力 += 4
	ENDSELECT
	
	;成功判定
	掃除骰子 = (4 + ABL:MASTER:清掃技能) - RAND:11
	
	[IF_DEBUG]
	PRINTFORML [ベースの清掃力:{清掃力}][掃除骰子:{掃除骰子}]
	[ENDIF]
	
	;掃除骰子が1以上なら成功(清掃0で30%、清掃6で90%)
	IF (掃除骰子 > 0)
	
		清掃力 = 清掃力 * (5 - TALENT:MASTER:61) / 5
		
		掃除前的污垢 = YOGORE:(SWEEPID)
		
		YOGORE:(SWEEPID) = YOGORE:(SWEEPID) / 清掃力
		
		掃除後的污垢 = YOGORE:(SWEEPID)
		
		;掃除量を計算して半分を戻して反映
		掃除量 = (掃除前的污垢 - 掃除後的污垢) / 2
		掃除後的污垢 += 掃除量
		YOGORE:(SWEEPID) += 掃除量
		EX:MASTER:今日的掃除回数 = EX:MASTER:今日的掃除回数 + 掃除量
		
		IF SWEEPGOD == 3
			PRINTFORML -------------------------扫除中----------------------------
		ELSE
			PRINTFORML %CALLNAME:PLAYER%在离開%NAME_FROM_PLACE(SWEEPID)%之前做了掃除
		ENDIF
		PRINTFORML
		
		[IF_DEBUG]
		PRINTFORML [清掃力:{清掃力}][掃除前:{掃除前的污垢}][掃除後:{掃除後的污垢}]
		[ENDIF]
		
		;清掃経験は1/3上昇
		SIF !RAND:3
			EXP:MASTER:清掃経験 ++
		
	ELSE 
		;掃除失敗
		SELECTCASE RAND:10
			CASE 1
				PRINTFORML %CALLNAME:PLAYER%想在%NAME_FROM_PLACE(SWEEPID)%做掃除、却把水桶打翻了
			CASE 2
				PRINTFORML %CALLNAME:PLAYER%手中的扫帚突然開始暴走、飞到了找不到的地方
			CASE 3
				PRINTFORML %CALLNAME:PLAYER%没能很好地掃除%NAME_FROM_PLACE(SWEEPID)%
			CASE 4
				PRINTFORML %CALLNAME:PLAYER%掃除过后的%NAME_FROM_PLACE(SWEEPID)%看起来比之前更脏了
			CASE 5
				PRINTFORML %CALLNAME:PLAYER%在让%NAME_FROM_PLACE(SWEEPID)%变得更漂亮这件事上努力过了
			CASE 6
				PRINTFORML %CALLNAME:PLAYER%正准备打扫房间的时候、面前出现了想要捣乱的妖精集団！
			CASE 7
				PRINTFORML %CALLNAME:PLAYER%在前面掃除的时候、有妖精在後面捣乱...
			CASE 8
				PRINTFORML %CALLNAME:PLAYER%觉得还是明天再整理就好了
			CASEELSE
				PRINTFORML %CALLNAME:PLAYER%感觉现在还不是掃除的时候
		ENDSELECT
		PRINTFORML
		
		;清掃経験は1/20上昇
		SIF !RAND:20
			EXP:MASTER:清掃経験 ++
		
	ENDIF
	
	;消費TSP/ステータス/消費時間は全て通常の半分
	
	;自動時止め移動、またはTS中ならTSP消費
	IF ((GETBIT(FLAG:瞬間移動, 1) || FLAG:70) && BASE:MASTER:TSP > 25)
		IF SWEEPGOD == 2
			BASE:MASTER:TSP -= 10
		ELSEIF SWEEPGOD == 3
			BASE:MASTER:TSP -= 0
		ELSE
			BASE:MASTER:TSP -= 25
		ENDIF
	ELSE
		DOWNBASE:MASTER:体力 = 25
		DOWNBASE:MASTER:気力 = 50
		IF SWEEPGOD > 1
			TIME += 5
		ELSE
			TIME += 15
		ENDIF
	ENDIF
ENDIF

RETURN 1
