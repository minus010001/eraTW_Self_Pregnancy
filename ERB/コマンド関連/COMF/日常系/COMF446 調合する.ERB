@COM_ABLE446
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(446)
	RETURN RESULT
;調合できる場所でない
SIF !PHARMACY_SPOT(CFLAG:MASTER:現在位置)
	RETURN 0
;調合用品一式を持っておらず、特殊調合スポットでない
SIF ITEM:(29) == 0 && PHARMACY_SPOT(CFLAG:MASTER:現在位置) == 1
	RETURN 0
;睡眠中
SIF CFLAG:MASTER:睡眠
	RETURN 0
SIF CFLAG:诶嘿嘿
	RETURN 0
;気力０
SIF BASE:MASTER:気力 <= 0
	RETURN 0
;時間停止中
SIF FLAG:70
	RETURN 0
RETURN 1

;-----------------------------------------------------------
;調合可能スポットかどうかを判定する関数
;ARG		現在位置
;RETURN		0 不可	1 可	2 調合セットなくても可（特殊調合ｽﾎﾟｯﾄ）
;COMMENT	基本は初期位置、それっぽい場所があるときはそちらも。
;			場所を追加した場合、CASEを変更の事
;-----------------------------------------------------------
@PHARMACY_SPOT(ARG)
#FUNCTION

SIF ARG == CFLAG:MASTER:初期位置
	RETURNF 1
;特殊調合スポット、メインMapでの判定
SELECTCASE MAIN_MAP
	CASE 0
		;博霊神社：無限遺跡・研究室
		SIF GROUPMATCH(ARG, 49)
			RETURNF 2
	CASE 1
		;命蓮寺：調薬室
		SIF GROUPMATCH(ARG, 132)
			RETURNF 2
	CASE 4
		;永遠亭：配药室
		SIF GROUPMATCH(ARG, 405)
			RETURNF 2
	CASE 5
		;魔法之森：魔理沙宅・研究部屋、人偶洋館・研究室
		SIF GROUPMATCH(ARG, 513, 524)
			RETURNF 2
	CASE 6
		;冥界：袿姫的房間
		SIF GROUPMATCH(ARG, 644)
			RETURNF 2
	CASE 7
		;妖怪之山山麓：河童の宣傳站
		SIF GROUPMATCH(ARG, 704)
			RETURNF 2
ENDSELECT

RETURNF 0


@CAN_PHARMA(R_ID, AMT = 1)
#FUNCTION
#DIM R_ID
#DIM AMT
#DIM INGREDIENT

SIF RECIPE_DATA(R_ID) == -1
	RETURNF 0
;SIF RECIPE_DATA(R_ID, 7) && !TFLAG:打水
SIF RECIPE_DATA(R_ID, 7) && VAR_WATER == ""
	RETURNF 0

;特定角色の親密依存道具を弾く
SELECTCASE R_ID / 10
	CASE 513 
		SIF ABL:[[阿求]]:親密 < 5
			RETURNF 0
	CASE 514, 515
		SIF ABL:[[永琳]]:親密 < 5
			RETURNF 0
	CASE 516, 517
		SIF ABL:[[梅蒂欣]]:親密 < 5
			RETURNF 0
	CASE 531
		SIF ABL:[[妹紅]]:親密 < 5
			RETURNF 0
	CASE 850
		SIF ABL:[[魔理沙]]:親密 < 5
			RETURNF 0
	CASE 851
		SIF ABL:[[琪露諾]]:親密 < 5
			RETURNF 0
	CASE 852
		SIF ABL:[[布都]]:親密 < 5
			RETURNF 0
	CASE 853
		SIF ABL:[[紫]]:親密 < 5
			RETURNF 0
	CASE 854
		SIF ABL:[[帕秋莉]]:親密 < 5
			RETURNF 0
	CASE 855
		SIF ABL:[[成美]]:親密 < 5
			RETURNF 0
ENDSELECT

FOR LOCAL,0,6
	INGREDIENT = RECIPE_DATA(R_ID, LOCAL)
	SIF !INGREDIENT
		BREAK
	SIF ITEM:INGREDIENT < AMT
		RETURNF 0
NEXT
SIF ITEM:RECIPE_DATA(R_ID) < AMT * RECIPE_DATA(R_ID, 8)
	RETURNF 0

RETURNF AMT * RECIPE_DATA(R_ID, 6)


;-----------------------------------------------------------
;調合物選択列表を描画する
;  MASTERの調合知識か教養のレベルに応じて列表が解放される仕組み
;  体質変化薬の類は【禁断的知識】がないと解放されない
;-----------------------------------------------------------
@PHARMACY_LIST
#DIMS 道具名

PRINTL 要調合什么？
PRINTL ■調合Lv1===========================================================================================================
LOCAL:1 = 999
FOR LOCAL:0 ,0, 1000
	SELECTCASE PHARMACY_RANK(LOCAL:0)
		CASE 1
			CALL PHARMACY_LIST_BUTTON(LOCAL:0, LOCAL:1)
			LOCAL:1 = RESULT
	ENDSELECT
NEXT
PRINTL 
