@COM304
#DIM JOBTYPE

JOBTYPE = CFLAG:TARGET:350

SIF FLAG:70 && JOBTYPE == 41
	RETURN 0

CALL JOB_EFFICIENCY(JOBTYPE)

IF FLAG:70
	IF BASE:工作量 <= 0
		PRINTFORML 已经完成了%CALLNAME:TARGET%交付的工作
		BASE:MASTER:TSP -= 10
		RETURN 0
	ELSE
		BASE:MASTER:TSP -= 200
	ENDIF
ELSE
	SELECTCASE JOBTYPE
		;清掃
		CASE 40
			DOWNBASE:MASTER:体力 += 50
			DOWNBASE:MASTER:気力 += 100
			SIF TALENT:MASTER:清掃中毒
				DOWNBASE:MASTER:気力 -= 50
		;会話
		CASE 41
			DOWNBASE:MASTER:体力 += 50
			DOWNBASE:MASTER:気力 += 150
		;戦闘
		CASE 42
			DOWNBASE:MASTER:体力 += 200
			DOWNBASE:MASTER:気力 += 50
		;教養
		CASE 43
			DOWNBASE:MASTER:体力 += 50
			DOWNBASE:MASTER:気力 += 200
		;料理
		CASE 44
			DOWNBASE:MASTER:体力 += 50
			DOWNBASE:MASTER:気力 += 100
		CASE 46
			DOWNBASE:MASTER:体力 += 50
			DOWNBASE:MASTER:気力 += 50
		CASE 53
			DOWNBASE:MASTER:体力 += 50
			DOWNBASE:MASTER:気力 += 150
	ENDSELECT
	;所要時間
	IF JOBTYPE == 48 || JOBTYPE == 50
		TIME += 30
	ELSE
		SELECTCASE TARGET
		CASE [[慧音]]
			;慧音の寺子屋授業善后工作手伝い14時～14時30分まで
			;慧音の寺子屋授業善后工作手伝い14時10分～14時30分まで
			;慧音の寺子屋授業善后工作手伝い14時20分～14時30分まで
			;順番的に時短処理が機能していなかったので修正
			IF INRANGE(TIME, CLOCK_TO_TIME(14, 20), CLOCK_TO_TIME(14, 30))
				TIME += 10
			ELSEIF INRANGE(TIME, CLOCK_TO_TIME(14, 10), CLOCK_TO_TIME(14, 30))
				TIME += 20
			ELSEIF INRANGE(TIME, CLOCK_TO_TIME(14, 00), CLOCK_TO_TIME(14, 30))
				TIME += 30
			ELSE
				TIME += 60
			ENDIF
		;艾倫の呼び込み手伝い
		CASE [[艾倫]]
			IF TCVAR:TARGET:354 < 25
				TIME += 30
			ELSE
				TIME += 60
			ENDIF
		CASEELSE
			TIME += 60
		ENDSELECT
	ENDIF
	DOWNBASE:気力 += 10
	;信頼
	TFLAG:98 += 5
	TFLAG:情緒上昇抑制 = 1
	;固定で獲得するソース
	SOURCE:歓楽 = 300
	SIF JOBTYPE == 49
		SOURCE:歓楽 += 200
	
	;ABL:従順をみる
	IF ABL:従順 <= 1
		SOURCE:歓楽 += (ABL:従順 * 50)
	ELSEIF ABL:従順 <= 3
		SOURCE:歓楽 += 100 + (ABL:従順 * 40)
	ELSEIF ABL:従順 <= 5
		SOURCE:歓楽 += 200 + (ABL:従順 * 50)
	ELSEIF ABL:従順 <= 8
		SOURCE:歓楽 += 400 + (ABL:従順 * 70)
	ELSEIF ABL:従順 <= 11
		SOURCE:歓楽 += 500 + (ABL:従順 * 60)
	ELSE
		SOURCE:歓楽 += 800 + (ABL:従順 * 40)
	ENDIF

	;ABL:親密チェック
	IF ABL:親密 <= 1
		SOURCE:歓楽 += 70 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 3
		SOURCE:歓楽 += 120 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 5
		SOURCE:歓楽 += 200 + (ABL:親密 * 50)
	ELSEIF ABL:親密 <= 8
		SOURCE:歓楽 += 500 + (ABL:親密 * 40)
	ELSEIF ABL:親密 <= 11
		SOURCE:歓楽 += 800 + (ABL:親密 * 40)
	ELSE
		SOURCE:歓楽 += 1200 + (ABL:親密 * 30)
	ENDIF

	;好感度をみる
	IF CFLAG:2 <= 500
		SOURCE:歓楽 += CFLAG:2
	ELSEIF CFLAG:2 <= 5000
		SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
	ELSE
		SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
	ENDIF
	SIF SOURCE:歓楽 < 0
		SOURCE:歓楽 = 0

	SOURCE:受動 = 230 + 80 * ABL:従順
	SOURCE:征服 = 150 + 200 * ABL:施虐属性
ENDIF
SIF BASE:TARGET:工作量 <= 0
	CALL CHARA_JOBEND(TARGET)
RETURN 1


@JOB_EFFICIENCY(ARG)
#DIM ABILITY
#DIM WorkP

WorkP = 0
IF INRANGE(ARG, 40, 45) || ARG == 53
	ABILITY = ABL:MASTER:ARG
	SIF ARG == 53
		ABILITY = TALENT:MASTER:調合Lv
	SELECTCASE TFLAG:192
		;通常
		CASE 0
			LOCAL = RAND:100
			LOCAL:1 = 75 + ABILITY * 5
			IF LOCAL <= 10 + ABILITY * 2
				;技能次第で大成功
				TFLAG:193 = 1
				WorkP = (50 + (ABILITY) * 75) * 2
				TFLAG:98 = 2
			ELSEIF LOCAL >= LOCAL:1
				;10～1％で失敗
				TFLAG:193 = -1
				WorkP = 0
				TFLAG:98 = -1
			ELSE
				;残りは成功
				TFLAG:193 = 0
				WorkP = 50 + (ABILITY) * 75
				TFLAG:98 = 0
			ENDIF
		;強制成功or大成功
		CASE 1
			IF RAND:100 <= 10 + ABILITY * 2
				;技能次第で大成功
				TFLAG:193 = 1
				WorkP = (50 + (ABILITY) * 75) * 2
				TFLAG:98 = 2
			ELSE
				;残りは成功
				TFLAG:193 = 0
				WorkP = 50 + (ABILITY) * 75
				TFLAG:98 = 0
			ENDIF
		;強制失敗
		CASE -1
			TFLAG:193 = -1
			TFLAG:98 = -2
		;指令終了
		CASE -2
			TFLAG:193 = -1
			RETURN 0
	ENDSELECT
ELSEIF ARG == 46
	SELECTCASE TFLAG:192
		;通常
		CASE 0
			LOCAL = RAND:100
			LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
			SIF LOCAL:1 > 99
				LOCAL:1 = 99
			WorkP = 0
			IF LOCAL <= 9
				;10％で大成功
				TFLAG:193 = 1
				TFLAG:98 = 2
				EXP:MASTER:会話経験 ++
			ELSEIF LOCAL >= LOCAL:1
				;10～1％で失敗
				TFLAG:193 = -1
				TFLAG:98 = -1
			ELSE
				;残りは成功
				TFLAG:193 = 0
				TFLAG:98 = 0
			ENDIF
		;強制成功or大成功
		CASE 1
			IF RAND:100 <= 9
				;10％で大成功
				TFLAG:193 = 1
				TFLAG:98 = 2
				EXP:MASTER:会話経験 ++
			ELSE
				;残りは成功
				TFLAG:193 = 0
				TFLAG:98 = 0
			ENDIF
		;強制失敗
		CASE -1
			TFLAG:193 = -1
			TFLAG:98 = -2
		;指令終了
		CASE -2
			TFLAG:193 = -1
			RETURN 0
	ENDSELECT
ENDIF

SELECTCASE ARG
	;清掃
	CASE 40
		SIF TFLAG:193 == 1
		EXP:MASTER:清掃経験 ++
		SIF !RAND:4
			EXP:MASTER:清掃経験 ++
	;会話
	CASE 41
		SIF TFLAG:193 == 1
		EXP:MASTER:会話経験 ++
		SIF !RAND:4
			EXP:MASTER:会話経験 ++
	;戦闘
	CASE 42
		SIF TFLAG:193 == 1
		EXP:MASTER:戦闘経験 ++
		SIF !RAND:4
			EXP:MASTER:戦闘経験 ++
	;教養
	CASE 43
		SIF TFLAG:193 == 1
		EXP:MASTER:学習経験 ++
		SIF !RAND:4
			EXP:MASTER:学習経験 ++
	;料理
	CASE 44
		SIF TFLAG:193 == 1
			EXP:MASTER:料理経験 ++
		EXP:MASTER:料理経験 ++
	;音楽
	;CASE 45
	;宴会片づけ
	CASE 50
		SIF TFLAG:193 == 1
			EXP:MASTER:清掃経験 ++
		SIF !RAND:4
			EXP:MASTER:清掃経験 ++
	CASE 53
		SIF TFLAG:193 == 1
			EXP:MASTER:調合経験 ++
		EXP:MASTER:調合経験 ++
ENDSELECT

;報酬倍率
LOCAL:4 = TCVAR:TARGET:工资

;働いた分工作量減少
LOCAL:3 = (WorkP + RAND:80 + RAND:80 + 10)

;当然時間停止中は会話系の手伝いはできない
SIF FLAG:70 && GROUPMATCH(ARG, 41)
	LOCAL:3 = 0
SIF TCVAR:TARGET:沒法幫忙 == 2 && FLAG:70
	LOCAL:3 /= 5
;調合知識
IF TARGET == [[鈴仙]] && YOUBI_MATCH(DAY, "木")
	EXP:MASTER:調合経験 += 2
	SIF ABL:MASTER:教養 > RAND:5
		EXP:MASTER:調合経験 ++
ENDIF

;呼び込みは工作量少なめ（艾倫）
SIF TARGET == [[艾倫]] && CFLAG:職種 == 41
	LOCAL:3 /= 2
;みすちーは料理経験におまけ
SIF TARGET == [[米斯蒂亜]]
	EXP:MASTER:料理経験 ++
;TCVAR:315が2じゃなければ工作量減る
IF TCVAR:TARGET:沒法幫忙 != 2
	BASE:工作量 = BASE:工作量 - LOCAL:3
ENDIF
IF BASE:工作量 < 0 && CFLAG:TARGET:20 > 0
	BASE:工作量 = 1
ELSEIF BASE:工作量 < 0
	BASE:工作量 = 0
ENDIF
;働いた分アナタの工作量を増加（報酬に影響）
TCVAR:MASTER:帮忙工作量 += LOCAL:3 * LOCAL:4
TCVAR:TARGET:帮忙工作量 += LOCAL:3
IF ARG != 46
	PRINTFORML 这次帮忙完成的工作量{LOCAL:3}
ENDIF

