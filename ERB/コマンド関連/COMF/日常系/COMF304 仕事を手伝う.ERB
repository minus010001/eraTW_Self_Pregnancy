SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(304)
	RETURN RESULT
;仕事中でない
SIF CFLAG:行動 != 5
	RETURN 0
;宴会参加者は別扱い
SIF GROUPMATCH(CFLAG:職種, ENKAI_SANKA, 喝得酩酊大醉)
	RETURN 0
