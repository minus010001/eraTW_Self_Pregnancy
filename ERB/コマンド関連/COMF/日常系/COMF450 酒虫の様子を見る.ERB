@CAN_FERMENT(ARG)
#FUNCTION
SIF DAY:10 >= 3
	RETURNF 0
SIF GROUPMATCH(VAR_FERMENT, "普通的水", "霧之湖的水", "地獄温泉的水", "奇跡之水")
	RETURNF 1
RETURNF 0

