@COM353
IF FLAG:甲斐性無
	DRAWLINE
	PRINTFORMW %CALLNAME:MASTER%沒有那樣的膽量
	RETURN -1
ENDIF
;複数を想定しているようだがABLEの方で多人数を弾いてる
FOR LOCAL, 1, GET_TARGETNUM() + 1
	CALL SET_PRANK(1, TARGET:LOCAL, 1)
NEXT
SIF CFLAG:TARGET:睡眠姦 < 1
	CFLAG:TARGET:睡眠姦 = 1
SIF CFLAG:MASTER:隠密中
	CFLAG:MASTER:隠密中 = 0	
SIF CFLAG:TARGET:隠密中
	CFLAG:TARGET:隠密中 = 0	
RETURN 1

