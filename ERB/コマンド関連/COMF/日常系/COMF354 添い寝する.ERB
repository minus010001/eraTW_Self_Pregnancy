;陪睡
;日常系指令、レベル2
;-------------------------------------------------
@COM354
;陪睡
;これも二人きりでしかできないはず
FOR LOCAL, 1, GET_TARGETNUM() + 1
	CALL SET_TOGETHER(1, TARGET:LOCAL, 1)
	SIF !CFLAG:(TARGET:LOCAL):衰弱 && !CFLAG:(TARGET:LOCAL):招待
		CALL SET_SLEEP(0, TARGET:LOCAL, 0)
	CALL SET_DERAY(4, TARGET:LOCAL)
NEXT

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE354
;停止中は不可
SIF FLAG:70
	RETURN 0
;添い寝実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(354)
	RETURN RESULT
;睡眠中のみ
SIF CFLAG:睡眠 == 0
	RETURN 0
;恋慕を持っていない
IF SLEEPTOGETHER == 1
	SIF TALENT:恋慕 == 0 && TALENT:愛欲 == 0
		RETURN 0
ELSE
	SIF TALENT:恋慕 == 0
		RETURN 0
ENDIF
;ターゲットの私室でのみ
;SIF CFLAG:MASTER:現在位置 != CFLAG:311
;	RETURN 0
;すでに添い寝モード
SIF CFLAG:陪睡中
	RETURN 0
;恶作剧モード中は出来ない
SIF CFLAG:恶作剧
	RETURN 0
;约会中
SIF CHK_DATENOW(CFLAG:约会中)
	RETURN 0
;他に誰か居る
SIF GET_TARGETNUM() > 1
	RETURN 0
RETURN 1

