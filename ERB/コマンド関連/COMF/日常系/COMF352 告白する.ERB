;-------------------------------------------------
;告白
;日常系指令、レベル2
;-------------------------------------------------
@COM352
#DIM RANDOM
LOCAL = 0
IF FLAG:甲斐性無
	DRAWLINE
	PRINTFORMW %CALLNAME:MASTER%沒有那樣的膽量
	RETURN -1
ENDIF
;告白対象確認
PRINTFORML 向%CALLNAME:TARGET%に告白。
;【恋人】只能有{FLAG:追加恋人枠 + 1}个。
PRINTFORML 成功判定:{CFLAG:TARGET:合意判定} > {350 + TALENT:TARGET:難以越過的底線 * 100},可以吗？
CALL ASK_YN("放弃","告白")
IF !RESULT
	RETURN -1
ENDIF

;パラメータにより成功基礎値判定
;SETBIT TFLAG:一日一回, 12

SELECTCASE TFLAG:192
	;通常
	CASE 0
		IF  CFLAG:合意判定 > 350 + TALENT:難以越過的底線 * 100
			TFLAG:193 = 1
		ELSE
			RANDOM = RAND:100
			IF RANDOM >= 100
				SETCOLOR 255,100,255
				PRINTFORM 幸运色狼！%CALLNAME:TARGET%无奈接受了你的告白！
				RESETCOLOR
				TFLAG:193 = 1
			ELSE
				TFLAG:193 = 0
				CFLAG:2 += 30
				BASE:TARGET:情緒 += 300
			ENDIF
		ENDIF
	;強制成功or大成功
	CASE 1
		TFLAG:193 = 1
	;強制失敗
	CASE -1
		TFLAG:193 = 0
	;指令終了
	CASE -2
		TFLAG:193 = 0
		RETURN 0
ENDSELECT

IF TFLAG:193 == 1
	SOURCE:歓楽 = 1000
	SOURCE:受動 = 500 + 100 * ABL:従順
	SOURCE:征服 = 500 + 100 * ABL:施虐属性
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE352
;停止中は不可
SIF FLAG:70
	RETURN 0
;妄想中は告白できない
SIF TFLAG:妄想中 == 1
	RETURN 0
;告白実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(352)
	RETURN RESULT
;二人きりでないとだめ
SIF GET_TARGETNUM() > 1
	RETURN 0
;亲热強度2
SIF TCVAR:MASTER:亲热 < 2
	RETURN 0
;すでに恋人の場合はだめ
SIF TALENT:恋人
	RETURN 0
;SIF GETBIT(TFLAG:一日一回, 12)
;	RETURN 0
;恋人の数が上限に達していてはだめ
;SIF !CAN_MAKE_恋人()
;	RETURN 0
SIF TALENT:TARGET:路人
	RETURN 0
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;陪睡中
SIF CFLAG:陪睡中
	RETURN 0
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
RETURN 1
