;-------------------------------------------------
;陰蒂夾
;道具使用指令、レベル2
;-------------------------------------------------
@COM742
;着脱の処理
TEQUIP:PLAYER:陰蒂夾 = !TEQUIP:PLAYER:陰蒂夾

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:気力 += 80

SOURCE:PLAYER:快Ｃ = 200
SOURCE:PLAYER:露出 = 20
SOURCE:PLAYER:逸脱 = 30
SOURCE:PLAYER:反感 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 30

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;自慰経験
CFLAG:PLAYER:自慰过了 ++

EXP:PLAYER:道具使用経験 ++

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM742(PLAYER)
PRINTL ＜陰蒂夾装備中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:気力 += 20

SOURCE:PLAYER:快Ｃ += 100
SOURCE:PLAYER:露出 += 10
SOURCE:PLAYER:逸脱 += 15
SOURCE:PLAYER:反感 += 15
;-------------------------------------------------
;経験の処理
;-------------------------------------------------

RETURN 1

;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
@COM_ABLE742
;電動陰蒂夾実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(742)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:11
	RETURN 1
;道具を持っているか、道具無設定でないとダメ
SIF ITEM:2 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;男人や扶她はダメ
SIF (HAS_PENIS(TARGET))
	RETURN 0
;ASSIの場合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;淋浴中はダメ
SIF TEQUIP:32
	RETURN 0
RETURN 1

