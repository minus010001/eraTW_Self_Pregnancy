;-------------------------------------------------
;跳蛋
;道具使用指令、レベル1
;-------------------------------------------------
@COM740
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
PRINTL 跳蛋
STR:0 = 跳蛋
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:気力 += 80

SOURCE:PLAYER:快Ｃ = 250
SOURCE:PLAYER:露出 = 20
SOURCE:PLAYER:逸脱 = 30
SOURCE:PLAYER:反感 = 30
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 30
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;自慰経験
CFLAG:PLAYER:自慰过了 ++

EXP:PLAYER:道具使用経験 ++
RETURN 1

;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
@COM_ABLE740
;跳蛋実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(740)
	RETURN RESULT
;道具を持っているか、道具無設定でないとダメ
SIF ITEM:0 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
SIF TEQUIP:0 & 8
	RETURN 0
RETURN 1

