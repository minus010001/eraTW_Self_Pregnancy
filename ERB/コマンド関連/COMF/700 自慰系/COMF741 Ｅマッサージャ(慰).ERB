;-------------------------------------------------
;電動按摩棒(慰)
;道具使用指令、レベル2
;-------------------------------------------------
@COM741
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 30
DOWNBASE:PLAYER:気力 += 150

SOURCE:PLAYER:快Ｃ = 500
SOURCE:PLAYER:露出 = 40
SOURCE:PLAYER:逸脱 = 60
SOURCE:PLAYER:反感 = 60

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 60

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;自慰経験
CFLAG:PLAYER:自慰过了 ++

EXP:PLAYER:道具使用経験 ++

RETURN 1

;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
@COM_ABLE741
;電動按摩棒実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(741)
	RETURN RESULT
;道具を持っているか、道具無設定でないとダメ
SIF ITEM:1 == 0 && NOITEM == 0
	RETURN 0
;ASSIの場合、技巧3以上か施虐狂じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3 && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF
;淋浴中はダメ
SIF TEQUIP:32
	RETURN 0
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:現在位置)
	RETURN 0
RETURN 1

