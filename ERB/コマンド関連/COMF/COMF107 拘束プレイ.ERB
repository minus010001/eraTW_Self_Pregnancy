;拘束
;SM系指令、レベル1
;-------------------------------------------------
@COM107
IF CFLAG:强行内射 == 1 && !TEQUIP:拘束
	PRINTFORML 以前被强制中出过的%CALLNAME:TARGET%对此深恶痛绝的様子…
	PRINTFORML [0] 放弃
	PRINTFORML [1] 最后再来一次吧
	$LOOP
	INPUT
	IF RESULT == 0
		PRINTFORML 为了不惹恼%CALLNAME:TARGET%、放弃了捆绑
		RETURN -1
	ELSEIF RESULT == 1
		IF ABL:受虐属性 >= 3 || (CFLAG:4 + ABL:PLAYER:話術技能 * 100) > 1500
			PRINTFORML 在苦苦哀求之下总算把%CALLNAME:TARGET%说服了
			CFLAG:强行内射 = 2
		ELSE
			PRINTFORML 无论%CALLNAME:PLAYER%怎么说、%CALLNAME:TARGET%就是不答应…
			SOURCE:反感 += 10000
			BASE:情緒 /= 2
			TFLAG:193 = 1
			RETURN -1
		ENDIF
	ELSE
		GOTO LOOP
	ENDIF
ELSEIF CFLAG:强行内射 == 3 && !TEQUIP:拘束
	PRINTFORML 面对厚颜无耻再次提出想玩捆绑的%CALLNAME:PLAYER%、%CALLNAME:TARGET%投来了冰冷的視線
	CALL ASK_YN("对不起",@"但是我还是想和%CALLNAME:TARGET%来拘束PLAY")
	IF RESULT == 0
		PRINTFORML 察觉到危険的%CALLNAME:PLAYER%立刻打了退堂鼓
		RETURN -1
	ELSEIF RESULT == 1
		IF ABL:受虐属性 >= 3 || (CFLAG:4 + ABL:PLAYER:話術技能 * 100) > 3000
			PRINTFORML %CALLNAME:TARGET%在软磨硬泡之下、最後还是同意被捆绑了
			PRINTW 真好对付！
		ELSE
			PRINTFORML %CALLNAME:TARGET%一言不发背朝着%CALLNAME:PLAYER%穿上了衣服
			CUP:欲情 = 0
			SOURCE:反感 += 10000
			BASE:情緒 = 0
			FOR LOCAL,0,CHARANUM
				SIF CFLAG:诶嘿嘿 == 2
					CALL SET_DERAY(5,LOCAL)
				CALL ENDUFUFU(LOCAL)
			NEXT
			TFLAG:106 = 0
			;PLAYERとの接触位置をリセット
			CALL TOUCH_SET(0,0,0,1)
			;はだけフラグをオフ
			TEQUIP:2 = 0
			TEQUIP:上半身裸露状態 = 0
			;角色全員の服再セッティング
			FOR LOCAL,0,CHARANUM
				CALL CLOTHES_SETTING_TRAIN(LOCAL)
				;上衣脱衣完毕フラグをオフ
				TEQUIP:LOCAL:5 = 0
			NEXT
			TFLAG:193 = 1
			RETURN 1
		ENDIF
	ENDIF
ENDIF
