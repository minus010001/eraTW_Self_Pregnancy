@COM_ABLE617
;一括管理
SIF GLOBAL_COMABLE(617)
	RETURN RESULT
;相手が居ない
SIF !TARGET
	RETURN 0
;约会中以外
SIF !CHK_DATENOW(CFLAG:12)
	RETURN 0
;甘味処ではない場所
SIF !SWEETS_SHOP(CFLAG:MASTER:現在位置)
	RETURN 0
;食べたばかり
SIF !TIME_PROGRESS(TCVAR:甜点空腹時刻)
	RETURN 0
SIF MONEY < 3000
	RETURN 0
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;時間停止中
SIF FLAG:70
	RETURN 0
RETURN 1

;甘味処を判定する関数
@SWEETS_SHOP(ARG)
#FUNCTION
IF !IN_HOME(ARG)
	SIF ARG == 広場
		RETURNF 1
ELSE
	;甜品店
	SIF ARG == 217
		RETURNF 1
ENDIF
RETURNF 0
