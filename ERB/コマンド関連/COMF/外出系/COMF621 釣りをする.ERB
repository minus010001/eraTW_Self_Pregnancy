;釣魚
@COM621
#DIM 釣れたもの
#DIM 釣魚パワー
#DIM 釣魚パワーM
#DIM 釣魚パワーT
#DIM 釣れない補正
#DIM 釣魚運
#DIM CHARA
#DIM 相方が釣った
#DIM 活性
#DIM FISHED, 2

相方が釣った = 0
;参加者判定
IF FLAG:约会的对象
	CHARA = FLAG:约会的对象
ELSEIF TARGET && ABL:TARGET:親密 >= 5 - TALENT:TARGET:釣魚Lv && SHIRAHU(TARGET) && CFLAG:TARGET:行動 != 5
	CHARA = TARGET
ELSE
	CHARA = 0
ENDIF
;かわいそう；；
IF FLAG:催眠強度 <= 24 && (CHARA == [[若鷺姫]] || TARGET == [[若鷺姫]])
	PRINTFORMW 在她面前釣魚的話那太殘酷了…
	RETURN -1
ENDIF

;(天候パッチ)連続降水Counter10以上で鉄砲水に巻き込まれる可能性
IF CONTINUOUS_RAINFALL >= 10 && RAND:(MAX(10, 40 - CONTINUOUS_RAINFALL)) == 0
	PRINTFORML …川の様子がおかしい
	PRINTFORMW ！！　鉄砲水だ！！
	
	PRINTFORML 
	PRINTFORML %CALLNAME:MASTER%は川に押し流されながらも
	PRINTFORML なんとか川から這い上がることに成功した…
	PRINTL 
	CALL ASK_DIARY("鉄砲水に遭遇した")
	BASE:MASTER:体力 = 0
	RETURN -1
ENDIF

;季節ごとの活性
SELECTCASE DAY:2
	CASE 1  ;春
		活性 = 10
	CASE 2  ;夏
		活性 = 7
	CASE 3  ;秋
		活性 = 10
	CASE 4  ;冬
		活性 = 3
ENDSELECT
;時刻ごとの活性補正
SELECTCASE TIME:2
	CASE 1, 4  ;早朝と昼下がり
		活性 += 10
	CASE 5, 6  ;夕と夜
		活性 += 5
ENDSELECT
;天気による活性
;(天候パッチ)豪雨・ひょう・冰雹
SELECTCASE TIME:5
	CASE 3, 6 ;曇、霧雨
		活性 += 5
	CASE 4, 5, 14, 15 ;雨
		活性 += 7
	CASE 13
		IF GET_HEAT_THUNDERSTORM() == 1 || GET_FRONTAL_THUNDERSTORM() == 1
			活性 += 7
		ELSE
			活性 -= 3
		ENDIF
	CASE 8 TO 12 ;雪系統は减少
		活性 -= 3
ENDSELECT
;虹が出てるときは、雨の後で水が濁っているだろう
SELECTCASE TIME:7
	CASE 1
		活性 += 7
ENDSELECT

;(天候パッチ)連続降水Counter分活性にプラス(最大+10)
活性 += MIN(10, CONTINUOUS_RAINFALL)

;日替わりで-50～+50,道具やお祈り等で補正をかけることも可
釣魚運 = CFLAG:MASTER:今日の運勢 / 10 - 50

;釣魚Lvで活性を察知
IF TALENT:MASTER:釣魚Lv >= 3
	SETCOLOR C_L_GRAY
	SELECTCASE (活性 + 釣魚運)
		CASE IS <= 10
			PRINTFORML （几乎看不到魚影…）
		CASE 11 TO 30
			PRINTFORML （魚影稀疏…）
		CASE 31 TO 50
			PRINTFORML （魚影看起来还不错…）
		CASE 51 TO 65
			PRINTFORML （魚影相当多…）
		CASEELSE
			PRINTFORML （魚影到处都是、水面沙沙作响…）
	ENDSELECT
	RESETCOLOR
ENDIF

;釣魚の醍醐味は待ち時間だと聞いた
FOR LOCAL, 0, 5
	REUSELASTLINE  \@ CHARA ? 和%CALLNAME:CHARA%一起 #  \@釣魚中.%"." * LOCAL%
	TWAIT 150, 1
NEXT
;釣魚パワー設定
釣魚パワーM = MIN(活性 + TALENT:MASTER:釣魚Lv * 15 + 釣魚運 + 釣れない補正, 100)
SIF CHARA
	釣魚パワーT = MIN(活性 + TALENT:CHARA:釣魚Lv * 15 + 釣れない補正, 100)

;（釣魚パワー）％で釣れる
FISHED:0 = RAND:100
IF FISHED < 釣魚パワーM
	釣魚パワー = 釣魚パワーM
	$FISH
	;釣れたら補正リセット
	釣れない補正 = 0
	;釣魚パワーで釣れるものが変わる
	SELECTCASE RAND:釣魚パワー
	CASE IS < 5
		;木材
		釣れたもの = 610
	CASE IS < 10
		;守矢之守札
		釣れたもの = 131
	CASE 51 TO 60
		;青蛙
		釣れたもの = 706
	CASE 10 TO 50, 61 TO 89
		FISHED:1 = (FISHED:0 + 10) / 10 * 10
		釣れたもの = FISHING_CATCH(FISHED:1)
	CASE IS < 95
		釣れたもの = FISHING_CATCH(95)
	CASEELSE
		釣れたもの = FISHING_CATCH(100)
		;BOUNS
		IF 相方が釣った
			EXP:CHARA:釣魚経験 ++
		ELSE
			EXP:MASTER:釣魚経験 ++
		ENDIF
	ENDSELECT
	;道具に追加
	SELECTCASE 釣れたもの
		CASE 1 TO 10, 22 TO 23
			CALL GET_ITEM("魚", 1, 1)
		CASE 11 TO 20, 24 TO 60
			CALL GET_ITEM("好吃的魚", 1, 1)
		CASE 21
			CALL GET_ITEM("跳蛋", 1, 1)
		CASEELSE
			SIF ITEM:釣れたもの < 99
				ITEM:釣れたもの ++
	ENDSELECT
;CHARAが釣った場合
ELSEIF CHARA && RAND:100 < 釣魚パワーT
	釣魚パワー = 釣魚パワーT
	相方が釣った = 1
	GOTO FISH
;釣れなかったら補正加算,釣れるまで蓄積していく
ELSE
	釣れない補正 += 10
	釣れたもの = 0
ENDIF

;基本の経験
EXP:MASTER:釣魚経験 ++

SIF ITEM:107 && !RAND:2
	EXP:MASTER:釣魚経験 ++

SIF CHARA
	EXP:CHARA:釣魚経験 ++
;釣った人の追加経験
IF 釣れたもの
	IF 相方が釣った
		EXP:CHARA:釣魚経験 ++
	ELSE
		EXP:MASTER:釣魚経験 ++
	ENDIF
ENDIF
;約會経験
IF CHK_DATENOW(CFLAG:CHARA:约会中) && CHARA > 0
	EXP:MASTER:約會経験 ++
	EXP:CHARA:約會経験 ++
ENDIF

;你が釣ったら体力減少
SIF 釣れたもの && !相方が釣った
	DOWNBASE:MASTER:体力 = 50
DOWNBASE:MASTER:気力 = 100

;参加者のソース,随意設定してます,同一指令制限を受けないので控えめに,ただし釣れないと毎回半減
IF CHARA > 0
	;固定で獲得するソース
	SOURCE:CHARA:歓楽 = 400
	SOURCE:CHARA:情愛 = 50
	
	;ABL:従順をみる
	IF ABL:従順 <= 1
		SOURCE:CHARA:歓楽 += (ABL:従順 * 40)
		SOURCE:CHARA:情愛 += (ABL:親密 * 20)
	ELSEIF ABL:従順 <= 3
		SOURCE:CHARA:歓楽 += 200 + (ABL:従順 * 40)
		SOURCE:CHARA:情愛 += 50 + (ABL:親密 * 30)
	ELSEIF ABL:従順 <= 5
		SOURCE:CHARA:歓楽 += 500 + (ABL:従順 * 40)
		SOURCE:CHARA:情愛 += 200 + (ABL:親密 * 30)
	ELSEIF ABL:従順 <= 8
		SOURCE:CHARA:歓楽 += 750 + (ABL:従順 * 60)
		SOURCE:CHARA:情愛 += 300 + (ABL:親密 * 40)
	ELSEIF ABL:従順 <= 11
		SOURCE:CHARA:歓楽 += 1000 + (ABL:従順 * 60)
		SOURCE:CHARA:情愛 += 600 + (ABL:親密 * 40)
	ELSE
		SOURCE:CHARA:歓楽 += 1600 + (ABL:従順 * 30)
		SOURCE:CHARA:情愛 += 1000 + (ABL:親密 * 20)
	ENDIF
	SIF CHARA != FLAG:约会的对象 
		SOURCE:CHARA:情愛 = 0
	
	;好感度はみない
	
	
	SOURCE:CHARA:受動 = 200 + 100 * ABL:従順
	SOURCE:CHARA:征服 = 200 + 100 * ABL:施虐属性
	
	;釣果をみる
	SELECTCASE 釣れたもの
	;釣れない
	CASE 0
		TIMES SOURCE:CHARA:歓楽 , 0.50
		TIMES SOURCE:CHARA:受動 , 0.50
		TIMES SOURCE:CHARA:征服 , 0.50
	;木材, 守矢之守札
	CASE 610, 131
		TIMES SOURCE:CHARA:歓楽 , 0.10
		TIMES SOURCE:CHARA:受動 , 0.50
		TIMES SOURCE:CHARA:征服 , 0.50
		SOURCE:CHARA:達成 = 20
	;石斑魚, 皐月鱒, 山女魚, 岩魚, 鯉魚など
	CASE 1 TO 10, 22
		TIMES SOURCE:CHARA:歓楽 , 1.00
		TIMES SOURCE:CHARA:受動 , 1.00
		TIMES SOURCE:CHARA:征服 , 1.00
		SOURCE:CHARA:達成 = 100
	;青蛙
	CASE 706
		IF CHARA == [[琪露諾]]
			TIMES SOURCE:CHARA:歓楽 , 2.00
			TIMES SOURCE:CHARA:受動 , 2.00
			TIMES SOURCE:CHARA:征服 , 2.00
		ELSEIF CHARA == [[諏訪子]]
			TIMES SOURCE:CHARA:歓楽 , 0.50
			TIMES SOURCE:CHARA:受動 , 0.50
			TIMES SOURCE:CHARA:征服 , 0.50
		ELSE
			TIMES SOURCE:CHARA:歓楽 , 1.25
			TIMES SOURCE:CHARA:受動 , 1.00
			TIMES SOURCE:CHARA:征服 , 1.00
		ENDIF
		SOURCE:CHARA:達成 = 150
	;鮭魚, 西太公魚, 虹鱒, 雷魚など
	CASE 11 TO 13, 15 TO 20, 24 TO 30, 32
		TIMES SOURCE:CHARA:歓楽 , 1.50
		TIMES SOURCE:CHARA:受動 , 1.50
		TIMES SOURCE:CHARA:征服 , 1.50
		SOURCE:CHARA:達成 = 200
	;八目鰻
	CASE 14
		;みすちー
		IF CHARA == 28
			TIMES SOURCE:CHARA:歓楽 , 2.00
			TIMES SOURCE:CHARA:受動 , 2.00
			TIMES SOURCE:CHARA:征服 , 2.00
		ELSE
			TIMES SOURCE:CHARA:歓楽 , 1.50
			TIMES SOURCE:CHARA:受動 , 1.50
			TIMES SOURCE:CHARA:征服 , 1.50
		ENDIF
		SOURCE:CHARA:達成 = 250
	;跳蛋
	CASE 21
		SOURCE:CHARA:欲情 = 200
	;腔棘鱼，泷太郎，氷之鱗, 龍之爪，龍涎香
	CASE 23, 31, 609, 606, 643
		TIMES SOURCE:CHARA:歓楽 , 2.00
		TIMES SOURCE:CHARA:受動 , 2.00
		TIMES SOURCE:CHARA:征服 , 2.00
		SOURCE:CHARA:達成 = 300
	ENDSELECT
ENDIF

;時間経過
TIME += 20

;フラグ引き渡し
TFLAG:SELECTCOM的分岐 = 釣れたもの
SELECTCASE 釣れたもの
	CASE 0
		COM_STR = 釣れない
	CASE 21
		COM_STR = 跳蛋
	CASE 1 TO 60
		COM_STR = %FISH_NAME(釣れたもの)%
	CASE 610
		COM_STR = 木片
	CASE 131
		COM_STR = 紙切れ
	CASEELSE
		COM_STR = %ITEMNAME:(釣れたもの)%
ENDSELECT

TFLAG:不影响SOURCE等的SELECTCOM的分岐 = CHARA + (相方が釣った * 1000)

RETURN 1

