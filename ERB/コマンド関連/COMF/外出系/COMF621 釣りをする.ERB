;-------------------------------------------------
;釣れたもの判定の拡張　場所、季節、時刻に応じて可変
;ARG　…ランクに対応
;-------------------------------------------------
@FISHING_CATCH(ARG)
#FUNCTION

SELECTCASE ARG
	CASE 20
		SELECTCASE FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1, 4 ;拉氏鱥
				RETURNF 5
			CASE 2, 7, 8 ;溪哥
				RETURNF 6
			CASE 3, 5, 6 ;石斑魚
				RETURNF 1
		ENDSELECT
	CASE 30
		SELECTCASE FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1, 2, 6 ;鲫魚
				RETURNF 7
			CASE 3, 5 ;皐月鱒
				RETURNF 2
			CASE 4 ;青蛙
				RETURNF 706
			CASE 7, 8 ;食人魚
				RETURNF 8
		ENDSELECT
	CASE 40
		SELECTCASE FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1, 2, 6 ;杜父魚
				RETURNF 16
			CASE 3, 5 ;山女魚
				RETURNF 3
			CASE 4, 8 ;青蛙
				RETURNF 706
			CASE 7 ;雀鳝
				RETURNF 9
		ENDSELECT
	CASE 50
		SELECTCASE FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1, 6 ;蓝鳃太阳魚
				RETURNF 10
			CASE 2, 7, 8 ;香魚（春夏）or溪哥（秋冬）
				IF DAY:2 < 3
					RETURNF 17
				ELSE
					RETURNF 6
				ENDIF
			CASE 3, 5 ;岩魚
				RETURNF 4
			CASE 4 ;青蛙
				RETURNF 706
		ENDSELECT
	CASE 70
		SELECTCASE FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1, 4, 6 ;鲶魚or西太公魚（冬）
				IF DAY:2 == 4
					RETURNF 12
				ELSE
					RETURNF 18
				ENDIF
			CASE 2, 7, 8 ;鰻魚
				RETURNF 19
			CASE 3, 5 ;虹鱒or鮭魚（秋）or西太公魚（冬）
				IF DAY:2 == 3
					RETURNF 11
				ELSEIF DAY:2 == 4
					RETURNF 12
				ELSE
					RETURNF 13
				ENDIF
		ENDSELECT
	CASE 80
		SELECTCASE FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1;姫鱒
				RETURNF 20
			CASE 2, 4, 6, 8 ;鯉魚
				RETURNF 22
			CASE 3, 5 ;八目鰻
				RETURNF 14
			CASE 7 ;鲟
				RETURNF 24
		ENDSELECT
	CASE 90
		SELECTCASE FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1;国鱒
				RETURNF 25
			CASE 2 ;草魚
				RETURNF 26
			CASE 3 ;雷魚
				RETURNF 15
			CASE 4 ;高身鲫
				RETURNF 27
			CASE 5 ;伊富魚
				RETURNF 28
			CASE 6 ;大口黑鲈
				RETURNF 29
			CASE 7 ;巨骨舌鱼
				RETURNF 30
			CASE 8 ;青鱼
				RETURNF 32
		ENDSELECT
	CASE 95
		SELECTCASE  FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1 ;泷太郎（新月の日）or跳蛋
				IF MOON_WATCH(DAY:3) == 1
					RETURNF 31
				ELSE
					RETURNF 21
				ENDIF
			CASE 2 ;腔棘鱼
				RETURNF 23
			CASEELSE
				;跳蛋
				RETURNF 21
		ENDSELECT
	CASE 100
		SELECTCASE FISHING_SPOT(CFLAG:MASTER:現在位置)
			CASE 1, 6, 8 ;龍涎香or氷之鱗（冬）
				IF DAY:2 == 4
					RETURNF 609
				ELSE
					RETURNF 643
				ENDIF
			CASE 2, 3, 5, 7 ;龍之爪or氷之鱗（冬）
				IF DAY:2 == 4
					RETURNF 609
				ELSE
					RETURNF 606
				ENDIF
			CASE 4 ;青蛙
				RETURNF 706
		ENDSELECT
ENDSELECT
RETURNF 0

