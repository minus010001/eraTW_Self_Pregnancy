	RETURN 0
SIF CFLAG:行動 == 5
	RETURN 0
;食べたばかり
SIF !TIME_PROGRESS(TCVAR:312)
	RETURN 0
SIF MONEY < 3000
	RETURN 0
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;時間停止中
SIF FLAG:70
	RETURN 0
RETURN 1

