			SOURCE:歓楽 = 50 + ABL:親密 * 5
			SOURCE:反感 = 100
			TFLAG:193 = -1
			RETURN IRAI_CONST_RESULT("実行して失敗")
		ELSE
			CALL COLORMESSAGE(@"＜NICE!!＞", C_YELLOW, 0)
			PRINTFORML 【%RESULTS:LOCAL%】
			PRINTFORMW %CALLNAME:TARGET%对%CALLNAME:MASTER%的回答很満意！
			TFLAG:193 = 1
			SOURCE:歓楽 = 500 + ABL:親密 * 50
			EXP:MASTER:会話経験 += 5
			TFLAG:好感度BOUNS = ABL:親密 * 5
			TFLAG:信賴度管理 = 2
			RETURN IRAI_CONST_RESULT("実行して成功")
		ENDIF
	;全部正解のパターン
	ELSEIF 正解の選択肢 == 7
		CALL COLORMESSAGE(@"＜NICE!!＞", C_YELLOW, 0)
		PRINTFORML 【%RESULTS:LOCAL%】
		PRINTFORMW %CALLNAME:TARGET%对%CALLNAME:MASTER%的回答很満意！
		TFLAG:193 = 1
		SOURCE:歓楽 = 500 + ABL:親密 * 50
		EXP:MASTER:会話経験 += 5
		TFLAG:好感度BOUNS = ABL:親密 * 5
		TFLAG:信賴度管理 = 2
		RETURN IRAI_CONST_RESULT("実行して成功")
	;全部ハズレのパターン
	ELSEIF 正解の選択肢 == 8
