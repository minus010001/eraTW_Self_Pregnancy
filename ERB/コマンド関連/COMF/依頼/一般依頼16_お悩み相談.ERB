	VARSET LOCAL
	;口上に委託するか判定
	CALL KOJO_MESSAGE_SEND("IRAI", TARGET, IRAI_ID, 0, 0, "TARGET", "口上委託率")
	;LOCAL:1～に発生させない番号を保存
	FOR LOCAL, 1, 100
		LOCAL:LOCAL = RESULT:LOCAL
	NEXT
