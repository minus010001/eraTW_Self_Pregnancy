	IF RESULT:100 > RAND:100
		VARSET RESULT
		VARSET RESULTS
		CALL KOJO_MESSAGE_SEND("IRAI", TARGET, IRAI_ID, 0, 0, "TARGET", "口上専用")
	;汎用ルート
	ELSE
		RESULT = 0
		WHILE !RESULT
			RESULT = 0
			;お悩みパターンを増やしたらここを調整（あえて稍微多めにしてます）
			お悩みナンバー = RAND:26
			SIF LOCAL:お悩みナンバー
				CONTINUE
			CALL IRAI_一般16_お悩みデータベース(お悩みナンバー, TARGET)
		WEND
	ENDIF
	正解の選択肢 = RESULT:1
