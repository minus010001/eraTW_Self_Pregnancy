;存否関数
;F関数はTRYCALL系が使えないので通常関数で存否配列を作っちゃう
@EXIST_一般依頼4
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
;ここでARGで渡されるのはCLIENT_IDです
@一般依頼4(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "依頼名"
	CALLF MAKE_STR(V_NAME, "想要学習料理")
CASE "依頼内容表示"
	CALLF MAKE_STR(V_NAME, @"指導%CALLNAME:ARG%練習料理")
CASE "依頼報酬表示"
	CALLF MAKE_STR(V_NAME, @"\\500")
CASE "依頼実行指令名"
	CALLF MAKE_STR(V_NAME, "料理")
CASE "依頼備考表示"
	CALLF MAKE_STR(V_NAME, "首先移動到可以料理的場所吧")

CASE "依頼内容"
	CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(0, "作業"))
CASE "依頼サブ"
CASE "依頼期限"
;発生時ではなく受託時に確定します
CASE "依頼発生率"
;これは他の一般依頼との相対確率なんで10％ではありません
	CALLF MAKE_INT(V_NAME, 10)
CASE "依頼発生条件"
	SIF ABL:ARG:料理技能 < ABL:MASTER:料理技能 && ABL:MASTER:料理技能 >=2 && ABL:ARG:親密 >= 3
		CALLF MAKE_INT(V_NAME, 1)
CASE "依頼受託可能条件"
	IF DISH_NAME != ""
	ELSEIF CFLAG:ARG:宴会参加
	ELSEIF GET_MAPID(CFLAG:MASTER:現在位置) == MAIN_MAP
		CALLF MAKE_INT(V_NAME, 1)
	ENDIF
CASE "依頼実行可能条件"
	SIF DISH_NAME == "" && KITCHEN(CFLAG:MASTER:現在位置)
		CALLF MAKE_INT(V_NAME, 1)
;成功/失敗処理はCARRYOUTで直接書く
;SOURCEやITEM入手、消費が煩雑になるので
CASE "依頼消滅条件"
	SIF RAND:100 < 30
		CALLF MAKE_INT(V_NAME, 1)
CASE "依頼人連れ出し可能"
	CALLF MAKE_INT(V_NAME, 1)
ENDSELECT



@IRAI_一般4(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE SCENE
CASE "依頼条件表示"
;何か専用の表示情報を設けたい時用
;受託済みの依頼表示で使用されます
;
;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも無しで
;ここ以外の表示項目は
;PRINTFORML 　　　　　：
;となっているのでスペースを揃えたほうが見栄えが良いです

CASE "依頼実行時"
;このCASEに限り、RESULTが意味を持ちます
;依頼実行時のRESULTにはIRAI_CONST_RESULT()を使用してください
;可能な引数は"中止", "実行して成功", "実行して失敗", "実行して未解決"です
;独自処理を仕込みたい時は"実行して未解決"で先延ばしするなりしてください
;
;"依頼実行時"に限っていえば、CHARAはTARGETと同一であり、必ずしもCLIENT_IDと一致するとは限りません
;個々のケースで確認する必要があります
;この依頼は「作業」扱いであり、CLIENTがTARGETになっている時のみ実行できます
;
;
	SOURCE:歓楽 = 500
	TIME += 20
	DOWNBASE:体力 = 50
	DOWNBASE:気力 = 50
	DOWNBASE:MASTER:体力 = 50
	DOWNBASE:MASTER:気力 = 50
	CALL 一般依頼4_COOKING(TARGET)
	PRINTFORML %CALLNAME:MASTER%和%CALLNAME:TARGET%一起制作著%DISH_NAME%
	RETURN IRAI_CONST_RESULT("実行して成功")
CASE "依頼成功時"
;成功報告時の報酬など
	CALL CHANGE_CFLAG(2, TARGET, 20)
	CALL CHANGE_CFLAG(4, TARGET, 20)
	EXP:TARGET:料理経験 += 5 * (ABL:MASTER:料理技能 - ABL:TARGET:料理技能)
	PRINTFORML 
	PRINTFORML 「いただきます」
	CALL 吃飯(TARGET)
	CALL 吃飯(MASTER)
	CALL GET_MONEY_YEN(500, 2)
	CALL RESET_DISH
CASE "依頼失敗時"
;失敗報告時の処理
	CALL CHANGE_CFLAG(2, TARGET, -10)
	CALL CHANGE_CFLAG(4, TARGET, -10)
	EXP:TARGET:料理経験 ++
ENDSELECT


;おまかせ料理と料理生成の複合
@一般依頼4_COOKING(CHARA)
#DIM CHARA
CALL RESET_DISH
IF !RAND:3 && ABL:MASTER:料理技能 >= 3
	DISH_TYPE = 甜点
ELSEIF !RAND:2 && ABL:MASTER:料理技能 >= 2
	DISH_TYPE = 主食
ELSE
	DISH_TYPE = 軽食
ENDIF
CALL FISHER_YATES_SHAFFLE(400 + CHARANUM)
FOR LOCAL, 1, 400 + CHARANUM + 1
	CALL DISHDATA(SHAFFLE_ARRAY:LOCAL + 100, DISH_TYPE)
	SIF STRCOUNT(DISH_TASTE, "过季/")
		CONTINUE
	SIF STRCOUNT(DISH_TASTE, "謎料理/")
		CONTINUE
	SIF RESULT >= 1
		BREAK
NEXT
CALL 料理生成(DISH_NAME, CHARA, "練習")
