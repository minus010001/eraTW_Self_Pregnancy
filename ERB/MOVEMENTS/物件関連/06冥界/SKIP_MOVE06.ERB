;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_6(ARG, ARG:1)
#DIM 現在的位置
;現在位置取得
IF ARG:1
	現在的位置 = ARG:1
ELSE
	現在的位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在的位置, ARG) & 1
	RETURN ARG

;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在的位置
CASE P608潤美的家
	RETURN P602賽の河原
CASE P609瓔花的家
	RETURN P603積石塚
CASE P615映姫的房間
	RETURN P614是非曲直庁等候室
CASE P616小町的房間, P617風呂, P618空的部屋
	RETURN P613是非曲直庁廊下
CASE P624妖夢私室, P625空室, P627風呂
	RETURN P622廊下
CASE P636八雲邸風呂, P637八雲邸廚房
	RETURN P631八雲邸廊下
CASE P643霊長園の風呂, P644袿姫的房間, P645磨弓的房間
	RETURN P642霊長園
CASE P646八千慧宅の風呂, P648八千慧宅の寝室
	RETURN P647八千慧宅の生活間
CASE P651早鬼宅の寝室, P652早鬼宅の風呂
	RETURN P650早鬼宅の生活間
CASE P654尤魔宅の寝室, P655尤魔宅の風呂
	RETURN P653尤魔宅の生活間
CASE P606日狭美の家, P607残無の家
	RETURN P605地獄
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;地点追加時要フォロー（全ケース修正すること）
SELECTCASE ARG
CASE P601中有之道
	RETURN P602賽の河原
CASE P602賽の河原
	SELECTCASE 現在的位置
	CASE P631八雲邸廊下 TO P639八雲邸居間
		RETURN P630八雲邸玄関
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P603積石塚
	SELECTCASE 現在的位置
	CASE P601中有之道
		RETURN P602賽の河原
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P604彼岸
	SELECTCASE 現在的位置
	CASE P612法廷 TO P618空的部屋
		RETURN P610是非曲直庁大堂
	CASE P621庭 TO P629西行妖
		RETURN P620冥界の門
	CASE P641畜生界大都市 TO P655尤魔宅の風呂
		RETURN P640異界の関所
	CASE P606日狭美の家, P607残無の家
		RETURN P605地獄
	CASEELSE
		RETURN P602賽の河原
	ENDSELECT
CASE P605地獄
	RETURN P604彼岸
CASE P606日狭美の家, P607残無の家
	RETURN P605地獄
CASE P608潤美的家
	RETURN P602賽の河原
CASE P609瓔花的家
	RETURN P603積石塚

CASE P610是非曲直庁大堂
	SELECTCASE 現在的位置
	CASE P612法廷 TO P618空的部屋
		RETURN P613是非曲直庁廊下
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P612法廷
	SELECTCASE 現在的位置
	CASE P610是非曲直庁大堂 TO P618空的部屋
		RETURN P613是非曲直庁廊下
	CASEELSE
		RETURN P610是非曲直庁大堂
	ENDSELECT
CASE P613是非曲直庁廊下
	RETURN P610是非曲直庁大堂
CASE P614是非曲直庁等候室, P616小町的房間, P617風呂, P618空的部屋
	RETURN P613是非曲直庁廊下
CASE P615映姫的房間
	RETURN P614是非曲直庁等候室

CASE P620冥界の門
	SELECTCASE 現在的位置
	CASE P622廊下 TO P629西行妖
		RETURN P621庭
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P621庭
	SELECTCASE 現在的位置
	CASE P623幽幽子私室 TO P627風呂
		RETURN P622廊下
	CASEELSE
		RETURN P620冥界の門
	ENDSELECT
CASE P622廊下
	RETURN P621庭
CASE P623幽幽子私室, P624妖夢私室, P625空室, P626廚房, P627風呂
	RETURN P622廊下
CASE P628居間
	SELECTCASE 現在的位置
	CASE P624妖夢私室, P625空室, P627風呂
		RETURN P622廊下
	CASEELSE
		RETURN P621庭
	ENDSELECT
CASE P629西行妖
	RETURN P621庭

CASE P630八雲邸玄関
	SELECTCASE 現在的位置
	CASE P633紫私室 TO P639八雲邸居間
		RETURN P631八雲邸廊下
	CASEELSE
		RETURN P602賽の河原
	ENDSELECT
CASE P631八雲邸廊下, P632八雲邸庭
	RETURN P630八雲邸玄関
CASE P633紫私室, P636八雲邸風呂, P637八雲邸廚房, P638藍私室, P639八雲邸居間
	RETURN P631八雲邸廊下
CASE P634空部屋, P635橙私室
	SELECTCASE 現在的位置
	CASE P633紫私室 TO P639八雲邸居間
		RETURN P631八雲邸廊下
	CASEELSE
		RETURN P630八雲邸玄関
	ENDSELECT

CASE P640異界の関所
	SELECTCASE 現在的位置
	CASE P642霊長園 TO P655尤魔宅の風呂
		RETURN P641畜生界大都市
	CASEELSE
		RETURN P604彼岸
	ENDSELECT
CASE P641畜生界大都市
	SELECTCASE 現在的位置
	CASE P643霊長園の風呂, P644袿姫的房間, P645磨弓的房間
		RETURN P642霊長園
	CASE P646八千慧宅の風呂, P648八千慧宅の寝室
		RETURN P647八千慧宅の生活間
	CASE P651早鬼宅の寝室, P652早鬼宅の風呂
		RETURN P650早鬼宅の生活間
	CASE P654尤魔宅の寝室, P655尤魔宅の風呂
		RETURN P653尤魔宅の生活間
	CASEELSE
		RETURN P640異界の関所
	ENDSELECT
CASE P642霊長園, P647八千慧宅の生活間, P650早鬼宅の生活間, P653尤魔宅の生活間
	RETURN P641畜生界大都市
CASE P643霊長園の風呂, P644袿姫的房間, P645磨弓的房間
	RETURN P642霊長園
CASE P646八千慧宅の風呂, P648八千慧宅の寝室
	RETURN P647八千慧宅の生活間
CASE P651早鬼宅の寝室, P652早鬼宅の風呂
	RETURN P650早鬼宅の生活間
CASE P654尤魔宅の寝室, P655尤魔宅の風呂
	RETURN P653尤魔宅の生活間

CASEELSE
	RETURN P601中有之道
ENDSELECT
