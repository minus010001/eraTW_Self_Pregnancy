;--------------------------------------------------
;内部構造がある場所の内部の判定
;TFLAG:地圖切換  内部察知が必要なMap番号
;                P_ID  表示ボタンの場所ID
;                Q_ID  判定する内部の場所ID,必ずP_IDと一致した数値も含める
;--------------------------------------------------
@GETMAP_BUILDING_0(P_ID, Q_ID)
#FUNCTION
#DIM P_ID
#DIM Q_ID
IF TFLAG:地圖切換 == 4
	SELECTCASE P_ID
		;三妖精之家
		CASE P27三妖精之家・大廳
			SELECTCASE Q_ID
			CASE P27三妖精之家・大廳 TO P35三妖精之家・地下室
				RETURNF 1
			ENDSELECT
		;夢幻遺跡
		CASE P36夢幻遺跡前
			SELECTCASE Q_ID
			CASE P36夢幻遺跡前 TO P51夢幻遺跡・倉庫
				RETURNF 1
			ENDSELECT
	ENDSELECT
ENDIF
RETURNF 0

;--------------------------------------------------
;移動制限設定
;ARG    場所ID
;CHARA  移動する角色ID
;RETURNF 1=移動できる,0=移動できない
;TFLAG:移動不能メッセージ   ↓の@MAP_CANNOT_WORD用の設定
;--------------------------------------------------
@MAP_CAN_MOVE_0(ARG, CHARA)
#FUNCTION
#DIM CHARA
SELECTCASE ARG
	;虫かご
	CASE P54小人的虫籠
		;小人じゃないと入れない
		IF TALENT:CHARA:体型 > -5
			TFLAG:移動不能メッセージ = 2
			RETURNF 0
		ENDIF
	;三妖精ハウス
	CASE P27三妖精之家・大廳 TO P35三妖精之家・地下室
		;妖精なら入れる
		SIF TALENT:CHARA:妖精
			RETURNF 1
		;中からは動ける
		SIF INRANGE(CFLAG:CHARA:現在位置, P27三妖精之家・大廳, P35三妖精之家・地下室)
			RETURNF 1
		;你は恋慕か教養LV1以上で入れる
		IF CHARA == MASTER
			IF TALENT:[[桑尼]]:恋慕 || TALENT:[[露娜]]:恋慕 || TALENT:[[斯塔]]:恋慕 || ABL:CHARA:教養 >= 1
				RETURNF 1
			ELSEIF INRANGE(CFLAG:MASTER:初期位置, P27三妖精之家・大廳, P35三妖精之家・地下室)
				RETURNF 1
			ELSE
				TFLAG:移動不能メッセージ = 1
				RETURNF 0
			ENDIF
		;それ以外は入れない
		ELSE
			RETURNF 0
		ENDIF
	;夢幻遺跡,你以外は教養LV3が必要
	CASE P37夢幻遺跡・一階通路 TO P51夢幻遺跡・倉庫
		;中からは動ける
		IF INRANGE(CFLAG:CHARA:現在位置, P37夢幻遺跡・一階通路, P51夢幻遺跡・倉庫)
			RETURNF 1
		ELSEIF ABL:CHARA:教養 <= 2 && CHARA != MASTER
			RETURNF 0
		ENDIF
ENDSELECT
RETURNF 1

