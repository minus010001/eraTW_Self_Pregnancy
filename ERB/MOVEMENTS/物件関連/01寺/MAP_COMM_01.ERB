;-----------------------------------------
;拠点専用の情景描写
;WAITはかけないように
;-----------------------------------------
@MAP_UNIQUEMESSAGE_1
VARSET LOCAL
SELECTCASE CFLAG:MASTER:現在位置
	CASE P104講堂
		PRINTFORML 放置著大木魚
		RETURN 1
	CASE P129客間
		PRINTFORML 放置著木刻的熊
		RETURN 1
	CASE P110走廊
		PRINTFORML 房檐上掛著蘿卜
		RETURN 1
	CASE P119別屋
		FOR LOCAL, 1, CHARANUM
			IF CFLAG:LOCAL:現在位置 == P112風呂
				LOCAL:1 = LOCAL
				LOCAL:2 ++
			ENDIF
		NEXT
		IF !LOCAL:2
			PRINTFORML 有著在這房間能偷窺浴室的秘密装置
		ELSE
			PRINTFORML 通過秘密装置看到了入浴中的%CALLNAME:(LOCAL:1)%\@ LOCAL:2 > 1? 們# \@
			PRINTFORML 真是絶景！
		ENDIF
		RETURN 1
	CASEELSE
ENDSELECT

