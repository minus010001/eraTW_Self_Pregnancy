@MAP_CAN_MOVE_ONEROOM(ARG, CHARA, 家主)
#FUNCTION
#DIM CHARA
#DIM 家主
#DIM 在宅
在宅 = 0
;你
IF CHARA == MASTER
	;自宅なら可能
	IF ARG == 默认初期位置
		RETURNF 1
	;同行か恋慕なら入れる（家主睡眠中も可
	ELSEIF CFLAG:家主:同行 || TALENT:家主:恋慕
		在宅 = 1
	;家主がいて起きてる
	ELSEIF CFLAG:家主:現在位置 == ARG
		SIF SHIRAHU(家主)
			在宅 = 1
	;家主以外の誰かがいる,この人物は寝てたりしても良い
	ELSEIF IN_ROOM_NUMBER(ARG)
		在宅 = 1
	ENDIF
;家主は入れる
ELSEIF CHARA == 家主
	在宅 = 1
;そうでない角色は相性が100を超えていないとダメ
ELSEIF RELATION:家主:CHARA > 100
	在宅 = 1
ENDIF
IF !在宅
	IF FINDCHARA(CFLAG:初期位置, ARG, 1) != -1 && FINDCHARA(CFLAG:初期位置, ARG, 1) != 家主
		家主 = FINDCHARA(CFLAG:初期位置, ARG, 1)
		RESTART
	ENDIF
	TFLAG:移動不能メッセージ = 999
	RETURNF 0
ENDIF
RETURNF 1
