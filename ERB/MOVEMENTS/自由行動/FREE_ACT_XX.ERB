@EXIST_FreeActXX
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeActXX(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 経過時間
経過時間 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行動指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "")
CASE "CHAIN"
;他角色に連鎖しない場合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "経過時間"
;陪同行動指令での経過時間
;0だと30分か残り時間全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行動内容_XX(CHARA, ARGS, 時間係数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 現在地
#DIM メッセージ表示
#DIM 時間係数
#DIM 経過時間
現在地 = CFLAG:CHARA:現在位置
メッセージ表示 = 現在地 == CFLAG:MASTER:現在位置 ? 1 # 0
SELECTCASE ARGS
	CASE "発生"
		;発生条件、ここでRETURN 0すると発生しない
		;CHAINは連鎖元角色に相当
		SIF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%\@ CHAIN ? 帮助%CALLNAME:CHAIN%開始了活动。# 開始了活動。\@
		;自由行動にかける時間をRETURNする
		RETURN 60 + RAND:30
	CASE "行動中"
		;行動中の処理、地の文もここで
		IF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%%TEXTR("在呼吸/在闪烁/在做鬼脸")%。
		ENDIF
	CASE "完了"
		;行動時間を使い切ったときの処理、地の文もここで
		SIF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%的活動结束了。
	CASE "中断"
		;中断したときの処理、地の文もここで
	CASE "交手"
		;自由行動に付き合ったとき用メッセージ
		PRINTFORML %CALLNAME:PLAYER%加入了%CALLNAME:TARGET%的活动
	CASE "ソース"
		;交手指令選択時の入手ソース、時間係数は付き合った時間の1/10
			;SOURCE:歓楽 = (50 + ((ABL:親密 + 好感度係数) * 25)) * 時間係数
			;SOURCE:受動 = (30 + ((ABL:従順 + 好感度係数) * 15)) * 時間係数
ENDSELECT
