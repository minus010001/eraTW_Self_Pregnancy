@EXIST_FreeAct8
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct8(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 経過時間
経過時間 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行動指令の名称
CASE "名称"
	IF TALENT:ARG:音楽知識 == 1
		CALLF MAKE_STR(V_NAME, "協同合奏")
	ELSE
		CALLF MAKE_STR(V_NAME, "进行伴奏")
	ENDIF
CASE "CHAIN"
;他角色に連鎖しない場合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "経過時間"
;陪同行動指令での経過時間
;0だと30分か残り時間全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行動内容_8(CHARA, ARGS, 時間係数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 現在地
#DIM メッセージ表示
#DIM 時間係数
#DIM 経過時間
現在地 = CFLAG:CHARA:現在位置
メッセージ表示 = 現在地 == CFLAG:MASTER:現在位置 ? 1 # 0
SELECTCASE ARGS
	CASE "発生"
		;［音楽知識］持ちの角色が訓練できる場所にいる時
		SIF !TALENT:CHARA:音楽知識
			RETURN 0
		SIF !戦闘訓練可(現在地)
			RETURN 0
		SIF BASE:CHARA:気力 <= MAXBASE:CHARA:気力 / 2
			RETURN 0
		IF メッセージ表示
			IF CHAIN
				SELECTCASE TALENT:CHAIN:音楽知識
				CASE 1
					SELECTCASE TALENT:CHARA:音楽知識
					CASE 1
						PRINTFORMW %CALLNAME:CHARA%開始和%CALLNAME:CHAIN%一起合奏了。
					CASE 2
						PRINTFORMW %CALLNAME:CHARA%配合著%CALLNAME:CHAIN%的演奏開始唱歌了。
					CASE 3
						PRINTFORMW %CALLNAME:CHARA%配合著%CALLNAME:CHAIN%的演奏開始跳舞了。
					ENDSELECT
				CASE 2
					SELECTCASE TALENT:CHARA:音楽知識
					CASE 1
						PRINTFORMW %CALLNAME:CHARA%配合著%CALLNAME:CHAIN%的歌聲開始演奏起來了
					CASE 2
						PRINTFORMW %CALLNAME:CHARA%擔任起%CALLNAME:CHAIN%的和聲了。
					CASE 3
						PRINTFORMW %CALLNAME:CHARA%配合著%CALLNAME:CHAIN%的歌聲開始跳舞了。
					ENDSELECT
				CASE 3
					SELECTCASE TALENT:CHARA:音楽知識
					CASE 1
						PRINTFORMW %CALLNAME:CHARA%配合著%CALLNAME:CHAIN%的舞蹈開始演奏了。
					CASE 2
						PRINTFORMW %CALLNAME:CHARA%配合著%CALLNAME:CHAIN%的舞蹈開始唱歌了。
					CASE 3
						PRINTFORMW %CALLNAME:CHARA%和%CALLNAME:CHAIN%一起跳起舞來。
					ENDSELECT
				ENDSELECT
			ELSE
				SELECTCASE TALENT:CHARA:音楽知識
				CASE 1
					PRINTFORMW %CALLNAME:CHARA%緩緩地開始演奏起來。
				CASE 2
					PRINTFORMW %CALLNAME:CHARA%情不自禁地開始唱起歌來。
				CASE 3
					PRINTFORMW %CALLNAME:CHARA%飄飄然地開始跳起舞來。
				ENDSELECT
			ENDIF
		ENDIF
		RETURN 60 + RAND:30
	CASE "行動中"
		IF メッセージ表示
			SELECTCASE TALENT:CHARA:音楽知識
			CASE 1
				PRINTFORMW %CALLNAME:CHARA%在暢快地演奏著。
			CASE 2
				PRINTFORMW %CALLNAME:CHARA%在自由自在地歌唱著。
			CASE 3
				PRINTFORMW %CALLNAME:CHARA%在華麗地舞蹈著。
			ENDSELECT
		ENDIF
	CASE "完了"
		SELECTCASE TALENT:CHARA:音楽知識
		CASE 1
			EXP:CHARA:演奏経験 += 1
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%結束了演奏后緩了緩氣。
		CASE 2
			EXP:CHARA:歌唱経験 += 1
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%結束了歌唱后緩了緩氣。
		CASE 3
			EXP:CHARA:舞踏経験 += 1
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%結束了舞蹈后緩了口氣。
		ENDSELECT
	CASE "中断"
		SELECTCASE TALENT:CHARA:音楽知識
		CASE 1
			EXP:CHARA:演奏経験 += 1
		CASE 2
			EXP:CHARA:歌唱経験 += 1
		CASE 3
			EXP:CHARA:舞踏経験 += 1
		ENDSELECT
	CASE "行動中"
		;行動中の処理、地の文もここで
		IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				SIF メッセージ表示
					PRINTFORMW %CALLNAME:CHARA%红着脸%TEXTR("在呼吸/在闪烁/在做鬼脸")%。
			ELSE
				SIF メッセージ表示
					PRINTFORMW %CALLNAME:CHARA%%TEXTR("在呼吸/在闪烁/在做鬼脸")%。
			ENDIF
	CASE "完了"
		;行動時間を使い切ったときの処理、地の文もここで
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%活動结束后吐着甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%的活動结束了。
		ENDIF	
		
	CASE "中断"
		;中断したときの処理、地の文もここで
	CASE "交手"
		IF TFLAG:193 == -2
			SELECTCASE TALENT:TARGET:音楽知識
			CASE 1
				PRINTFORML %CALLNAME:MASTER%因為沒有可以用的樂器、只好呆呆地聽著%CALLNAME:TARGET%的演奏…
			CASE 2
				PRINTFORML %CALLNAME:MASTER%因為沒有可以用的樂器、只好呆呆地聽著%CALLNAME:TARGET%的演唱…
			CASE 3
				PRINTFORML %CALLNAME:MASTER%因為沒有可以用的樂器、只好呆呆地看著%CALLNAME:TARGET%的舞蹈…
			ENDSELECT
		ELSE
			SELECTCASE TALENT:TARGET:音楽知識
			CASE 1
				PRINTFORML %CALLNAME:MASTER%和%CALLNAME:TARGET%並列在一起合奏起來
				IF TFLAG:193 > 0
					PRINTFORML %CALLNAME:TARGET%興致勃勃地演奏著…
				ELSEIF TFLAG:193 < 0
					PRINTFORML %CALLNAME:TARGET%露出了緊張的神色…
				ELSE
					PRINTFORML %CALLNAME:TARGET%發揮穩定地得演奏著…
				ENDIF
			CASE 2
				PRINTFORML %CALLNAME:MASTER%配合著%CALLNAME:TARGET%的歌聲開始演奏起來
				IF TFLAG:193 > 0
					PRINTFORML %CALLNAME:TARGET%興致勃勃地演唱著…
				ELSEIF TFLAG:193 < 0
					PRINTFORML %CALLNAME:TARGET%露出了緊張的神色…
				ELSE
					PRINTFORML %CALLNAME:TARGET%發揮穩定地演唱著…
				ENDIF
			CASE 3
				PRINTFORML %CALLNAME:MASTER%配合著%CALLNAME:TARGET%的舞蹈開始演奏起來
				IF TFLAG:193 > 0
					PRINTFORML %CALLNAME:TARGET%興致勃勃地跳著舞…
				ELSEIF TFLAG:193 < 0
					PRINTFORML %CALLNAME:TARGET%露出了緊張的神色…
				ELSE
					PRINTFORML %CALLNAME:TARGET%發揮穩定地跳著舞…
				ENDIF
			ENDSELECT
		ENDIF
	CASE "ソース"
		IF !GROUPMATCH(1, MUSIC_ABLE(30), MUSIC_ABLE(31), MUSIC_ABLE(32), MUSIC_ABLE(33), MUSIC_ABLE(34), MUSIC_ABLE(35))
			;楽器が使えないと見てるだけ
			TFLAG:193 = -2
			DOWNBASE:MASTER:気力 += 20 * 時間係数
			DOWNBASE:TARGET:体力 += 10 * 時間係数
			DOWNBASE:TARGET:気力 += 20 * 時間係数
			SOURCE:歓楽 = (50 + ((ABL:親密 + ABL:MASTER:音楽技能) * 10)) * 時間係数
		ELSE
			DOWNBASE:MASTER:体力 += 40 * 時間係数
			DOWNBASE:MASTER:気力 += 40 * 時間係数
			DOWNBASE:TARGET:体力 += 20 * 時間係数
			DOWNBASE:TARGET:気力 += 20 * 時間係数
			SELECTCASE RAND:(10 + ABL:MASTER:音楽技能)
			CASE 0
				;失敗
				TFLAG:193 = -1
				SOURCE:歓楽 = (100 + ((ABL:親密 + ABL:MASTER:音楽技能) * 20)) * 時間係数
			CASE 1 TO 9
				;成功
				SOURCE:歓楽 = (150 + ((ABL:親密 + ABL:MASTER:音楽技能) * 50)) * 時間係数
				TFLAG:98 = 1
			CASEELSE
				;音楽技能があるとその確率で大成功
				TFLAG:193 = 1
				SOURCE:歓楽 = (200 + ((ABL:親密 + ABL:MASTER:音楽技能) * 80)) * 時間係数
				TFLAG:98 = 2
			ENDSELECT
			;その場にいる他の角色にもソースが入る
			FOR LOCAL, 1, GET_TARGETNUM() + 1
				SIF TARGET:LOCAL == TARGET
					CONTINUE
				SIF !SHIRAHU(TARGET:LOCAL)
					CONTINUE
				SOURCE:(TARGET:LOCAL):歓楽 = ((150 + (50 * TFLAG:193)) + ((ABL:(TARGET:LOCAL):親密 + ABL:MASTER:音楽技能) * (50 + (30 * TFLAG:193)))) * 時間係数
			NEXT
			EXP:MASTER:演奏経験 ++
		ENDIF
ENDSELECT