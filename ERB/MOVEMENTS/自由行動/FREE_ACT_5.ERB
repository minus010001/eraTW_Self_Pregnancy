@EXIST_FreeAct5
#LOCALSIZE 1
#LOCALSSIZE 1
;オブジェクト本体
@FreeAct5(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 経過時間
経過時間 = Activity_Duration:TARGET
SELECTCASE O_DATA
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起做運動")
CASE "CHAIN"
;他角色に連鎖する場合コメントアウト外すこと
	CALLF MAKE_INT(V_NAME, 1)
CASE "経過時間"
;陪同行動指令での経過時間
;未入力だと最大30分
	;CALLF MAKE_INT(V_NAME, 経過時間)
ENDSELECT

@自由行動内容_5(CHARA, ARGS, 時間係数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 現在地
#DIM メッセージ表示
#DIM 時間係数
#DIM 経過時間
現在地 = CFLAG:CHARA:現在位置
メッセージ表示 = 現在地 == CFLAG:MASTER:現在位置 ? 1 # 0
SELECTCASE ARGS
	CASE "発生"
		;戦闘能力1以上の角色が訓練できる場所にいる時,ただし演奏優先
		SIF ABL:CHARA:戦闘能力 < 1
			RETURN 0
		SIF BASE:CHARA:気力 <= MAXBASE:CHARA:気力 / 2
			RETURN 0
		SIF TALENT:CHARA:音楽知識
			RETURN 0
		SIF !戦闘訓練可(現在地)
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%\@ CHAIN ? 決定跟%CALLNAME:CHAIN%一起運動了。# 做了個深呼吸后就開始運動了。\@
		RETURN 60 + RAND:60
	CASE "行動中"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %CALLNAME:CHARA%满脸通红%TEXTR("正在做弾幕模拟的練習/并且呼吸有些不稳了/正在调整着呼吸/充滿幹勁地在做著運動")%。
			ELSE
				PRINTFORMW %CALLNAME:CHARA%%TEXTR("正在做弾幕模拟的練習/呼吸有些不稳了/正在调整着呼吸/充滿幹勁地在做著運動")%。
			ENDIF	
		ENDIF
	CASE "完了"
		EXP:CHARA:戦闘経験 += 1
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%結束運動后吐着甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%結束運動后緩了緩氣。
		ENDIF	
		
	CASE "中断"
		EXP:CHARA:戦闘経験 += 1
	CASE "交手"
		IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %CALLNAME:CHARA%捂着嘴忍耐着体内\@ TALENT:MASTER:濃厚精液? 濃厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美的喘息%TEXTR("肌肉訓練/訓練/做準備運動")%中
				PRINTFORML 停留过的地方地上留下了奇怪的水迹……
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %CALLNAME:CHARA%正享受着体内满满\@ TALENT:MASTER:濃厚精液? 濃厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 欣赏着一边娇喘一边%TEXTR("肌肉訓練/訓練/做準備運動")%的%CALLNAME:TARGET%…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %CALLNAME:CHARA%正感受着体内大量\@ TALENT:MASTER:濃厚精液? 濃厚的 # 的\@精子的刺激……
				PRINTFORML 不时夹杂着甜美娇喘的%CALLNAME:TARGET%和%CALLNAME:PLAYER%%TEXTR("一起做起了肌肉訓練/一起做起了對抗訓練/互相幫忙做起了準備運動")%
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %CALLNAME:CHARA%正被体内许多\@ TALENT:MASTER:濃厚精液? 濃厚的 # 的\@精子刺激着……
				PRINTFORML %CALLNAME:PLAYER%和红着脸的%CALLNAME:TARGET%%TEXTR("一起做起了肌肉訓練/一起做起了對抗訓練/互相幫忙做起了準備運動")%
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %CALLNAME:CHARA%正被体内残存\@ TALENT:MASTER:濃厚精液? 濃厚的 # 的\@精子刺激着……
				PRINTFORML %CALLNAME:PLAYER%和%CALLNAME:TARGET%%TEXTR("一起做起了肌肉訓練/一起做起了對抗訓練/互相幫忙做起了準備運動")%
			ELSE
				PRINTFORML %CALLNAME:PLAYER%和%CALLNAME:TARGET%%TEXTR("一起做起了肌肉訓練/一起做起了對抗訓練/互相幫忙做起了準備運動")%
			ENDIF	
		
	CASE "ソース"
		DOWNBASE:MASTER:体力 += 40 * 時間係数
		DOWNBASE:MASTER:気力 += 40 * 時間係数
		DOWNBASE:TARGET:体力 += 20 * 時間係数
		DOWNBASE:TARGET:気力 += 20 * 時間係数
		SOURCE:歓楽 = (150 + ((ABL:親密 + ABL:MASTER:戦闘能力) * 50)) * 時間係数
		SOURCE:受動 = (100 + ((ABL:従順 + ABL:MASTER:戦闘能力) * 50)) * 時間係数
		SOURCE:征服 = (100 + ((ABL:施虐属性 + ABL:戦闘能力) * 100)) * 時間係数
		TFLAG:98 = 2
		EXP:MASTER:戦闘経験 ++
ENDSELECT