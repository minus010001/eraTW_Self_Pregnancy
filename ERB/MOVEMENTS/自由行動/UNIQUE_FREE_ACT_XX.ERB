[SKIPSTART]
@UNIQUE_FA_XX(CHARA, ARGS,時間係数)
#DIM CHARA
#DIM CHAIN
#DIM 現在地
#DIM メッセージ表示
#DIM 時間係数
現在地 = CFLAG:CHARA:現在位置
メッセージ表示 = 現在地 == CFLAG:MASTER:現在位置 ? 1 # 0

UNIQUE_FA_NAME:CHARA = ナントカする

SELECTCASE ARGS
	CASE "発生"
		;在住角色が自室にいる時
		SIF !CFLAG:CHARA:神社在住
			RETURN 0
		SIF 現在地 != CFLAG:CHARA:神社在住
			RETURN 0
		SIF BASE:CHARA:気力 <= 500
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%はなにやらナントカし始めた。
		;返し値は行動時間
		RETURN 90
	CASE "行動中"
		IF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%はナントカしている
		ENDIF
	CASE "完了"
		SIF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%はナントカを終えたようだ。
	CASE "中断"
		;中断メッセージは诶嘿嘿突入時等でも表示されてしまうので表示しない
	CASE "交手"
		PRINTFORML %CALLNAME:PLAYER%は%CALLNAME:CHARA%にナントカを尋ねた
		IF TFLAG:193 < 0
			PRINTFORML %CALLNAME:CHARA%は身体を強張らせ、ナントカしてしまった…
		ELSE
			PRINTFORML ナントカだったようだ…
		ENDIF
	CASE "ソース"
		DOWNBASE:MASTER:気力 += 20 * 時間係数
		DOWNBASE:TARGET:気力 += 20 * 時間係数
		SOURCE:歓楽 = (100 + ((ABL:親密 + ABL:MASTER:話術技能) * 50)) * 時間係数
		SOURCE:受動 = (60 + ((ABL:従順 + ABL:MASTER:話術技能) * 30)) * 時間係数
ENDSELECT
[SKIPEND]