@CHARAMOVE_DATA_54(ARG, ARG:2)
LOCAL = 54
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;仓库と屋敷外には出ない
			CASE P305仓库, P334廃洋館・入口 TO P348霧之湖・湖底
				RETURN -100
			;外にも二階にもあまり行かない
			CASE P302庭, P319二階廊下 TO P327小露台
				RETURN -5
			;いつも図書館
			CASE P310図書館
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 正門, 大廳, 食堂, 大図書館, 地下室
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
		;ごくまれに運動の
		IF CFLAG:LOCAL:今日の運勢 % 100 == 0 && INRANGE(TIME, 720, 960)
			SELECTCASE DAY % 3
			CASE 1
				TCVAR:LOCAL:引力点 = P302庭
			CASE 2
				TCVAR:LOCAL:引力点 = P324大露台
			CASEELSE
				TCVAR:LOCAL:引力点 = P314食堂
			ENDSELECT
		ENDIF
ENDSELECT

