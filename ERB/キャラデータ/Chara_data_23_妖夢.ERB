@CHARAMOVE_DATA_23(ARG, ARG:2)
LOCAL = 23
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;たまに連動
		SIF CFLAG:LOCAL:今日の運勢 % 10 == 0
			RETURN [[幽幽子]]
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P621庭, P626廚房, P628居間
				RETURN 5
			;幽幽子様の私室にはあまり入らない
			CASE P623幽幽子私室
				RETURN -5
			;私室系
			CASE P608潤美的家, P609瓔花的家, P615映姫的房間, P616小町的房間, P633紫私室, P635橙私室, P636八雲邸風呂, P638藍私室
				RETURN -100
			CASE P643霊長園の風呂 TO P655尤魔宅の風呂
				RETURN -100
			;是非曲直庁、畜生界は行きにくい
			CASE P610是非曲直庁大堂 TO P618空的部屋, P640異界の関所 TO P655尤魔宅の風呂
				RETURN -5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 桜花道的鳥居, 神社境内, 神社走廊
				RETURN 1
			CASE 地蔵小路, 倒垂的柳樹下, 神霊廟広場, 神霊廟道場
				RETURN 1
			CASE 広場, 商家町, 呑屋小道, 長屋街
				RETURN 1
			CASE 中有之道, 三途之川, 迷途之家, 彼岸, 白玉楼庭, 白玉楼
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_角色データ23
#LOCALSIZE 1
#LOCALSSIZE 1

@角色データ23(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "稱呼"
	CALLF MAKE_STR(V_NAME, "妖夢")
;こっから衣装設定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（襦袢）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "髮箍"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：襪子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("襪子", "襪子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))
CASE "便装：外搭"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外搭", "背心"))

CASE "固有内衣形容詞"
	CALLF MAKE_STR(V_NAME, "重视运动的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "内衣紧身裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "運動文胸")
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(後)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理関連
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "卵/米/煮物/酸/淡白/春物/質素/上品/家庭的/年糕/妖力/冥界風/和食/和食/甜/甜/甜/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "面包/洋食/霊障/辣/辣/青蛙/青蛙/青蛙/虫肉/虫肉/虫肉/" + "怪诞/謎料理/" * 5)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "切れ味/冥界風/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "緑/秩序/可愛的/和風/別緻/" + "幽霊/死生/刃物/" * 3 + "冥界の/幽明の/幽霊の/魂の/生と死の/懐剣/護刀/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "混沌/可怕的/奇妙/洋風/知的/威厳/" + "弾/生体品/烟袋/機械/" * 3)

;ここは依頼IDが関連しない情報
;依頼発生率スカ2/一般3/固有5
CASE "没有依頼発生率"
	CALLF MAKE_INT(V_NAME, 2)
CASE "一般依頼発生率"
	CALLF MAKE_INT(V_NAME, 3)
CASE "固有依頼発生率"
	CALLF MAKE_INT(V_NAME, 5)
CASE "固有依頼最終要素"
	CALLF MAKE_INT(V_NAME, 101)
CASEELSE
	;固有依頼関連のデータにバトンタッチ
	SIF STRCOUNT(O_DATA, "依頼")
		CALLF 固有依頼23(ARG, O_DATA, V_NAME)
ENDSELECT

