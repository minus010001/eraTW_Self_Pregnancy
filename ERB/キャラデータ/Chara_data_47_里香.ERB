@CHARAMOVE_DATA_47(ARG, ARG:2)
LOCAL = 47
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;夢幻遺跡に引かれる
			CASE P36夢幻遺跡前 TO P50夢幻遺跡・第二資料室
				RETURN 10
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 桜花道的鳥居, 神社境内
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_角色データ47
#LOCALSIZE 1
#LOCALSSIZE 1

@角色データ47(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "稱呼"
	CALLF MAKE_STR(V_NAME, "里香")
;こっから衣装設定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：襪子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("襪子", "襪子"))
CASE "便装：裤子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裤子", "短裤"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))

CASE "固有内衣形容詞"
	CALLF MAKE_STR(V_NAME, "平时就很睡意的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "朴素的内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "運動文胸")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 勝負内衣判定([[里香]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(後)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理関連
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "牛奶/卵/煮物/派/丰盛/垃圾/濃厚/機能的/新鲜/年糕/科学的/甜/甜/酸/酸/" + "謎料理/" * 3)
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "简易/淡白/野趣/咸/咸/青蛙/青蛙/青蛙/虫肉/虫肉/虫肉/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "化学的/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "銀/技術/混沌/可愛的/奇妙/充滿力量/知的/狂熱/" + "金属/付喪神/妖術/" * 3 + "変形型/遺物/機械/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "樸素/別緻/繊細/" + "护臂/烟袋/" * 3)
ENDSELECT

