@CHARAMOVE_DATA_27(ARG, ARG:2)
LOCAL = 27
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;魔理沙家,愛麗絲家,艾倫家,妖怪的棲息処
			CASE P510霧雨魔法店 TO P515魔理沙宅・倉庫, P521人偶洋館・愛麗絲的房間 TO P531人偶洋館・空的部屋
				RETURN -100
			CASE P535艾倫宅・寝室 TO P537艾倫宅・風呂, P541朱鷺子的棲息処, P543露米亜的棲息処, P544成美の小屋
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 兎的洞穴, 無名之丘, 太陽花田
				RETURN 1
			CASE 森林的入口, 古木的大樹, 再思之道, 無縁塚
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

