	CALLF MAKE_STR(V_NAME, "野趣/辣/辣/" + "青蛙/香料/地獄風/" * 3 + "虫肉/怪诞/謎料理/" * 5)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "薄味/")
;贈り物関連
