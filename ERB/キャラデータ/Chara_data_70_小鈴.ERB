	CALLF MAKE_STR(V_NAME, "緑/秩序/可愛的/奇妙/活潑/知的/不思議/狂熱/" + "眼鏡/書物/" * 3 + "妖怪の/妖魔の/外界の/妖魔圖鑒/鈴/" * 5)
