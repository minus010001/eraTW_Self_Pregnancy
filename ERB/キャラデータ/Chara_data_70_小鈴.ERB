@CHARAMOVE_DATA_70(ARG, ARG:2)
LOCAL = 70
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;日曜日は連動
		IF YOUBI_MATCH(DAY, "日")
			RESULT:1 = [[阿求]]
			RESULT:2 = [[小鈴]]
		ENDIF
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;稗田邸,慧音的家,鈴奈庵,自室,広場
			CASE P221稗田邸, P224慧音宅, P213鈴奈庵, P226小鈴私室, P202中央広場
				RETURN 5
			;私室には行かない
			CASE P208雷鼓的房間, P209八橋的房間, P210弁弁的房間
				RETURN -100
			CASE P231蛮奇的房間, P232蓮子的房間, P233梅莉的房間, P234雪的房間, P235​舞​的房間, P239美宵的房間
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 桜花道的鳥居, 神社境内, 神社走廊
				RETURN 1
			CASE 広場, 商家町, 呑屋小道, 長屋街
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

