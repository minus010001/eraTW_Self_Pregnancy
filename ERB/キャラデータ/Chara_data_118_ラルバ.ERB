@CHARAMOVE_DATA_118(ARG, ARG:2)
LOCAL = 118
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;まれに連動
		SIF CFLAG:LOCAL:今日の運勢 % 16 == 0
			RETURN [[桑尼]]
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27三妖精之家・大廳 TO P34斯塔私室
				RETURN 5
			;夢幻館には行かない
			CASE P450玄関 TO P465大堂
				RETURN -100
			;永遠亭の奥には行かない
			CASE P405配药室, P407廊下 TO P430地下室
				RETURN -100
			;他人的家には入らない
			CASE P432影狼的家, P437梅蒂欣的家, P443米斯蒂亜的家, P445妹紅的家
				RETURN -100
			;自宅,無名之丘,太陽花田,夢幻館庭によく居る
			CASE P439拉瓦爾的家, P436無名之丘, P438太陽花田, P466庭
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 霧之湖, 冰造的小雪屋, 正門
				;冬は行かない
				SIF DAY:2 != 4
					RETURN 1
			CASE 森林的入口, 古木的大樹, 再思之道, 無縁塚
				RETURN 1
			CASE 無名之丘, 太陽花田
				RETURN 1
			CASE 妖精的大樹
				;冬は行かない
				SIF DAY:2 != 4
					RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

