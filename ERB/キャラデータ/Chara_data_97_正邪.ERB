@CHARAMOVE_DATA_97(ARG, ARG:2)
LOCAL = 97
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;私室には入らない
			CASE P704河童の宣傳站, P706厄神的家, P709莉莉們的家, P716秋姉妹的家・土間 TO P730仙人的宅邸・庭
				RETURN -100
			CASE P736山姥之家, P737招财猫的家, P740山童の宣傳站
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 霧之湖, 廃洋館, 正門, 地下室
				RETURN 1
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 兎的洞穴, 無名之丘, 太陽花田
				RETURN 1
			CASE 森林的入口, 古木的大樹, 再思之道, 無縁塚
				RETURN 1
			CASE 中有之道, 三途之川
				RETURN 1
			CASE 山麓樹海, 玄武之澤, 大蛤蟆之池, 正邪的隠匿処前, 森の深奥
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

