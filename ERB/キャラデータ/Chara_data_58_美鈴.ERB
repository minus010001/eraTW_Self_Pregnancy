@CHARAMOVE_DATA_58(ARG, ARG:2)
LOCAL = 58
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;仓库には入らない、屋敷外には出ない
			CASE P305仓库, P334廃洋館・入口 TO P348霧之湖・湖底
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 霧之湖, 正門, 大廳, 食堂, 大図書館, 地下室
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_角色データ58
#LOCALSIZE 1
#LOCALSSIZE 1

@角色データ58(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "稱呼"
	CALLF MAKE_STR(V_NAME, "美鈴")
;こっから衣装設定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")
CASE "特殊衣装着用"
	SIF (TALENT:58:恋慕 || TALENT:58:炮友) && CFLAG:58:积攒度 >= 700
		CALLF MAKE_INT(V_NAME, 73)
CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "帽子"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：襪子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("襪子", "襪子"))
CASE "便装：裤子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裤子", "裤子"))
CASE "便装：連衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("連衣裙", "旗袍"))

CASE "固有内衣形容詞"
	CALLF MAKE_STR(V_NAME, "不会发出声音的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "高脚T字")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "運動文胸")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 勝負内衣判定([[美鈴]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(後)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理関連
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "肉料理/香料/油炸食品/丰盛/濃厚/芸術的/野趣/新鲜/年糕/女僕流/中華/中華/" + "辣/" * 3)
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "酸/酸/淡白/淡白/淡白/謎料理/謎料理/謎料理/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "得意料理＊中華＊/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "赤/虹/秩序/美的/大陸風/充滿力量/" + "七色の/極彩の/龍の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "知的/洋風/" + "刃物/弾/" * 3 + "小刀/" * 10)
ENDSELECT

