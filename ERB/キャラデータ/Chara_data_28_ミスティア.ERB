@CHARAMOVE_DATA_28(ARG, ARG:2)
LOCAL = 28
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;土日は響子と連動
		IF YOUBI_MATCH(DAY, "土日")
			RESULT:1 = [[米斯蒂亜]]
			RESULT:2 = [[響子]]
		ENDIF
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;夢幻館には行かない
			CASE P450玄関 TO P466庭
				RETURN -100
			;永遠亭の奥には行かない
			CASE P405配药室, P407廊下 TO P430地下室
				RETURN -100
			;他人的家には入らない
			CASE P432影狼的家, P437梅蒂欣的家, P439拉瓦爾的家, P445妹紅的家
				RETURN -100
			;自宅と屋台によく居る
			CASE P443米斯蒂亜的家, P444夜雀的小攤
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 地蔵小路, 倒垂的柳樹下, 命蓮寺境内, 墓地, 神霊廟広場
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 兎的洞穴, 無名之丘, 太陽花田
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大樹, 再思之道, 無縁塚
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

