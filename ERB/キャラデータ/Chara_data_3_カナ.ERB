@CHARAMOVE_DATA_3(ARG, ARG:2)
LOCAL = 3
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;壁櫥間にはあんまりいない
			CASE P18壁櫥間
				RETURN -5
			;他所
			CASE P27三妖精之家・大廳 TO P35三妖精之家・地下室, P39夢幻遺跡・浴室, P56阿吽の棲家
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 桜花道的鳥居, 神社境内, 神社走廊, 夢幻遺跡
				RETURN 1
			CASE 広場, 商家町, 呑屋小道, 長屋街
				RETURN 1
			CASE 夢幻館
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_角色データ3
#LOCALSIZE 1
#LOCALSSIZE 1

