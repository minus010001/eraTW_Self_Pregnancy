@CHARAMOVE_DATA_102(ARG, ARG:2)
LOCAL = 102
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;あんまり入らない
			CASE P512魔理沙宅・寝室, P521人偶洋館・愛麗絲的房間, P523人偶洋館・夢子的房間
				RETURN -5
			;引きこもらない
			CASE P522人偶洋館・神綺的房間
				RETURN -10
			;生活間, 研究室に行きやすい
			CASE P524人偶洋館・研究室, P525人偶洋館・生活間
				RETURN 5
			;他所の私室には入らない
			CASE P511魔理沙宅・居間, P515魔理沙宅・倉庫, P535艾倫宅・寝室, P536艾倫宅・倉庫, P537艾倫宅・風呂
				RETURN -100
			CASE P541朱鷺子的棲息処 TO P544成美の小屋
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 森林的入口, 古木的大樹, 霧雨魔法店, 人偶的洋館, 再思之道, 無縁塚
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_角色データ102
#LOCALSIZE 1
#LOCALSSIZE 1

@角色データ102(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "稱呼"
	CALLF MAKE_STR(V_NAME, "神綺")
;こっから衣装設定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：襪子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("襪子", "襪子"))
CASE "便装：連衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("連衣裙", "晚禮服"))

CASE "固有内衣形容詞"
	CALLF MAKE_STR(V_NAME, "无法创造出来的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "魔界神様の胖次")
