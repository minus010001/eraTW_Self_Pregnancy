	CALLF MAKE_STR(V_NAME, "中華/丰盛/質素/酸/酸/" + "青蛙/虫肉/謎料理/" * 3)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "魔界風/母亲的味道/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "白/高級/混沌/美的/威厳/壮大/" + "魔法/妖術/" * 3 + "魔界蝶の/魔神の/魔界の/神話の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "秩序/洛麗塔/狂熱/" + "安物/巫術/" * 3)
ENDSELECT

