@CHARAMOVE_DATA_104(ARG, ARG:2)
LOCAL = 104
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;たまに連動
		IF FLAG:每日变更事件 % 10 == 0
			RESULT:1 = [[雪]]
			RESULT:2 = [[​舞​]]
		ENDIF
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;雪​舞​的房間,広場
			CASE P234雪的房間, P235​舞​的房間, P202中央広場
				RETURN 5
			;私室には行かない
			CASE P221稗田邸, P224慧音宅, P222寺子屋, P226小鈴私室, P229阿求私室
				RETURN -100
			CASE P208雷鼓的房間, P209八橋的房間, P210弁弁的房間
				RETURN -100
			CASE P231蛮奇的房間, P232蓮子的房間, P233梅莉的房間, P239美宵的房間
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道, 長屋街
				RETURN 1
			CASE 森林的入口, 古木的大樹, 再思之道, 無縁塚
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

