	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "Ｔ恤衬衫"))
CASE "便装：裤子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裤子", "南瓜裤"))

