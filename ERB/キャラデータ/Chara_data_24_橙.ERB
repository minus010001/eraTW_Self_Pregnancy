@CHARAMOVE_DATA_24(ARG, ARG:2)
LOCAL = 24
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;たまに連動
		SIF CFLAG:LOCAL:今日の運勢 % 8 == 0
			RETURN [[藍]]
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P632八雲邸庭, P604彼岸
				RETURN 5
			;是非曲直庁、畜生界は行かない
			CASE P610是非曲直庁大堂 TO P618空的部屋, P640異界の関所 TO P655尤魔宅の風呂
				RETURN -100
			;他人的家には入らない
			CASE P608潤美的家, P609瓔花的家
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 中有之道, 三途之川, 迷途之家
				RETURN 1
			CASE 山麓樹海, 玄武之澤, 大蛤蟆之池, 森の深奥
				RETURN 1
			CASE 九天瀑布, 絶景之丘, 山之湖, 守矢神社境内
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_角色データ24
#LOCALSIZE 1
#LOCALSSIZE 1

@角色データ24(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "稱呼"
	CALLF MAKE_STR(V_NAME, "橙")
;こっから衣装設定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（襦袢）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "帽子"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：襪子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("襪子", "襪子"))
CASE "便装：連衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("連衣裙", "連衣裙"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "耳环"))

CASE "固有内衣形容詞"
	CALLF MAKE_STR(V_NAME, "黒猫柄の")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "手工缝制的")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 勝負内衣判定([[橙]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣半透明(後)"
	CALLF MAKE_INT(V_NAME, 0)

;料理関連
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "魚料理/肉料理/中華/油炸食品/丰盛/濃厚/野趣/家庭的/謎料理/松脆/甜/甜/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "健康/酸/酸/野菜/野菜/野菜/香料/香料/香料/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "妖力/" * 2)
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "朱/帥氣的/大陸風/洛麗塔/" + "妖術/生体品/" * 3 + "猫の/橙子の/式神の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "水/氷/書物/烟袋/" * 3 + "犬の/狼の/" * 10)
ENDSELECT

