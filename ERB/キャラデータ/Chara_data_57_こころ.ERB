@CHARAMOVE_DATA_57(ARG, ARG:2)
LOCAL = 57
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P2境内, P10走廊
				RETURN 5
			;私室にはあまり入らない
			CASE P15霊夢私室, P52別屋
				RETURN -5
			;他所
			CASE P27三妖精之家・大廳 TO P35三妖精之家・地下室, P37夢幻遺跡・一階通路 TO P51夢幻遺跡・倉庫, P56阿吽の棲家
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 桜花道的鳥居, 神社境内, 神社走廊
				RETURN 1
			CASE 地蔵小路, 倒垂的柳樹下, 命蓮寺境内, 命蓮寺方丈, 神霊廟広場, 神霊廟道場
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_角色データ57
#LOCALSIZE 1
#LOCALSSIZE 1

@角色データ57(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "稱呼"
	CALLF MAKE_STR(V_NAME, "心")
;こっから衣装設定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子+兜帽）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "面"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：襪子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("襪子", "襪子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "長裙"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))

;けして開放式胖次ではない
CASE "固有内衣形容詞"
	CALLF MAKE_STR(V_NAME, "各种面具笑脸的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "穿孔胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 勝負内衣判定([[心]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(後)"
	CALLF MAKE_INT(V_NAME, 1)

;料理関連
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "米/果物/和食/煮物/垃圾/淡白/豪華/芸術的/新鲜/年糕/辣/辣/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "濃厚/酸/酸/" + "青蛙/虫肉/謎料理/" * 3)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "彩り/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "粉色/美的/芸術的/和風/誇張/不思議/" + "精神/音楽/面/蜃気楼の/" * 3 + "心の/希望の/舞踊の/感情の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "別緻/洋風/" + "生体品/护臂/" * 3)
ENDSELECT

