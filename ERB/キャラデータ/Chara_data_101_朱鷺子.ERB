	CALLF MAKE_STR(V_NAME, "辣/辣/卵/卵/卵/" + "鳥肉/謎料理/" * 5)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "薄味/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "赤/秩序/可愛的/樸素/和風/別緻/繊細/知的/" + "鳥/書物/" * 3 + "知恵の/知識の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "活潑/充滿力量/威厳/" + "刃物/弾/护臂/" * 3)
ENDSELECT


