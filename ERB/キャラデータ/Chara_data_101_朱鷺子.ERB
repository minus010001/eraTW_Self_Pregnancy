	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "朱鷺色胸罩")
CASE "固有内衣着用条件"
	CALLF MAKE_INT(V_NAME, 1)
