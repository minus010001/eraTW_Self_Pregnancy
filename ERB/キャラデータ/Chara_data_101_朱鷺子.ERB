@CHARAMOVE_DATA_101(ARG, ARG:2)
LOCAL = 101
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;自宅によく居る
			CASE P541朱鷺子的棲息処
				RETURN 5
			;魔理沙家,愛麗絲家,艾倫家,妖怪的棲息処
			CASE P510霧雨魔法店 TO P515魔理沙宅・倉庫, P521人偶洋館・愛麗絲的房間 TO P531人偶洋館・空的部屋
				RETURN -100
			CASE P535艾倫宅・寝室 TO P537艾倫宅・風呂, P542莉格露的棲息処, P543露米亜的棲息処, P544成美の小屋
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 霧之湖, 正門, 大図書館
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大樹
				RETURN 1
			CASE 山麓樹海, 玄武之澤, 大蛤蟆之池
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_角色データ101
#LOCALSIZE 1
#LOCALSSIZE 1

@角色データ101(ARG, O_DATA, V_NAME)
