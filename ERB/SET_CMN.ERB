;-----------------------------------------------------------
;约会フラグセットという名のお出掛けセット関数
;（現在はCFLAG:约会中は現在位置のMAPIDとして使われている）
;呼び出し時の整合性を判定し、P_IDへの各種お出掛けフラグを設定する
;P_ID              お出掛け先のMAPID,MAXHOME以上だと帰宅
;C_ID              同行する角色ID
;所要時間          道中にかかる時間
;時間停止ジャンプ  時間停止でお出掛け（FLAG:時間停止を不使用）
;-----------------------------------------------------------
@SET_DATE(P_ID, C_ID, 所要時間, 時間停止ジャンプ)
#DIM P_ID
#DIM C_ID
#DIM 所要時間
#DIM 時間停止ジャンプ
#DIM 現在地MAPID
;お出掛け終了
IF P_ID >= MAXHOME
	;整合性チェック
	IF CHK_DATENOW(CFLAG:C_ID:约会中)
		CFLAG:MASTER:约会中 = MAIN_MAP
		FLAG:约会的对象 = 0
		TFLAG:约会前好感度 = 0
		CFLAG:MASTER:現在位置 = GET_ENTRANCE(MAIN_MAP)
		TFLAG:约会道中 = 0
		IF C_ID
			CFLAG:C_ID:约会中 = MAIN_MAP
			CFLAG:C_ID:現在位置 = GET_ENTRANCE(MAIN_MAP)
		ENDIF
	ENDIF
;お出掛け開始
ELSE
	;整合性チェック
	SIF BASE:MASTER:気力 <= 0
		RETURN
	IF C_ID
		SIF CFLAG:C_ID:衰弱
			RETURN
		SIF BASE:C_ID:気力 <= 0
			RETURN
	ENDIF
	CFLAG:MASTER:约会中 = P_ID
	現在地MAPID = GET_MAPID(CFLAG:MASTER:現在位置)
	;C_IDと约会
	IF C_ID
		FLAG:约会的对象 = C_ID
		CFLAG:C_ID:约会中 = P_ID
		TFLAG:约会前好感度 = CFLAG:C_ID:好感度
		;人里约会専用処理
		IF P_ID == 2
			CALL EX_COSTUME(C_ID, "人里约会")
			SIF RESULT
				PRINTFORMW %CALLNAME:C_ID%换上了适合人間之里的衣服
		ENDIF
		CFLAG:MASTER:現在位置 = ROAD_TO(P_ID)
		CFLAG:C_ID:現在位置 = ROAD_TO(P_ID)
		;開始時は+1000する
		TFLAG:约会道中 = 所要時間 + 1000
	;一人でお出掛け
	ELSE
		CFLAG:MASTER:現在位置 = GET_ENTRANCE(P_ID)
		IF 時間停止ジャンプ
			BASE:MASTER:TSP -= 所要時間 * 3
		ELSE
			TIME += 所要時間
		ENDIF
	ENDIF
	CALL HappenToChild
	CALL PICK_RUNINTO(P_ID)
ENDIF

;----------------------------------
;行動抑止時間セット CFLAG:313SET
;現在的場所ににセットする
;ARG=呼び出し種類 ARG:1=セット対象
;----------------------------------
@SET_DERAY(ARG,ARG:1)
IF !CFLAG:(ARG:1):延迟
	;呼び出し形式により処理変更 1=場所による延迟 2以降=イベントによる延迟
	SELECTCASE ARG
		;特定の場所に入ったら延迟
		CASE 1
			SELECTCASE CFLAG:(ARG:1):現在位置
				;廚房は料理するので延迟発生
				CASE 11
					IF ABL:(ARG:1):料理技能 >= 3
						CFLAG:(ARG:1):延迟 = 30
					ELSEIF ABL:(ARG:1):料理技能 > 1 && ABL:(ARG:1):料理技能 < 3
						CFLAG:(ARG:1):延迟 = 60
					ELSE
						CFLAG:(ARG:1):延迟 = 120
					ENDIF
				;お風呂に入ると延迟発生
				CASE 12
					CFLAG:(ARG:1):延迟 = 60
			ENDSELECT
		;朝起きたら延迟（朝は気分がまとまらないしネ）
		CASE 2
			CFLAG:(ARG:1):延迟 = 60
		;工作結束後は延迟
		CASE 3
			CFLAG:(ARG:1):延迟 = 20
		;添い寝やったら頑張って起きてくれる（衰弱時以外）
		CASE 4
			SIF !CFLAG:(ARG:1):衰弱
				CFLAG:(ARG:1):延迟 = 60
		;被逆推なだめたら延迟
		CASE 5
			CFLAG:(ARG:1):延迟 = 40
		;膝枕時は延迟
		CASE 6
			CFLAG:(ARG:1):延迟 = 10
		CASE 99
			;Deray Clear to Do nothing
	ENDSELECT
ELSE
	SELECTCASE ARG
		;延迟をクリア
		CASE 99
			CFLAG:(ARG:1):延迟 = 0
	ENDSELECT
ENDIF
