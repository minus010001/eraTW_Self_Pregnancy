;ハートか"、"をつける
;ARG = 1 "、"つけない
;ARG >= 2 確実にARG-1数ハート付与
@K53_ハート付与(ARG)
#FUNCTIONS

A = 0
SIF ARG >= 2
	A += ARG - 1

;欲情LVに応じて確立でハートをつける
IF GETPALAMLV(PALAM:欲情, 15) >= 12
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
ELSEIF GETPALAMLV(PALAM:欲情, 15) >= 8
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
ELSEIF GETPALAMLV(PALAM:欲情, 15) >= 4
	SELECTCASE RAND:3
		CASE 0
			A += 1
	ENDSELECT
ENDIF

IF A > 0
	RETURNF UNICODE(0x2764) * A
ELSEIF ARG == 0
	RETURNF "、"
ENDIF
