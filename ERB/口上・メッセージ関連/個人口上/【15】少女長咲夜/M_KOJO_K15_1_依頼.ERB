@M_KOJO_少女長_IRAIEXIST_K15(IRAI_NO)
#DIM  IRAI_NO   ;抑制させる一般依頼ナンバー
;動きを抑制させたい場合は、”RETURN 0”に変更すること
SELECTCASE IRAI_NO
	;幫忙做掃除（発生条件：TARGETがメインMap在住）
	CASE 1
		RETURN 1
	;給花澆水（発生条件：TARGETがMASTER侵入可能の自宅住まいかつ、メインMap在住かつ、親密２以上）
	CASE 2
		RETURN 1
	;一起玩吧（発生条件：TARGETがTALENT:幼稚持ち）
	CASE 3
		RETURN 1
	;想要学習料理（発生条件：TARGETの料理技能がMASTER未満かつ、MASTERの料理技能が２以上かつ、親密が３以上）
	CASE 4
		RETURN 1
	;関于特訓（発生条件：TARGETの戦闘能力がMASTER以下かつ、親密が２以上かつ人里以外）
	CASE 5
		RETURN 1
	;誰来告訴我！（発生条件：TARGETの教養がMASTER以下）
	CASE 6
		RETURN 1
	;大掃除還沒結束（発生条件：TARGETがメインMap在住かつ、冬の15日から31日までかつ、親密が３以上）
	CASE 7
		RETURN 1
	;送信（発生条件：TARGETの信賴度が30以上かつ、TARGETに文通相手が設定されている（FUNC_IRAI.ERBの965目以降に存在）
	CASE 8
		RETURN 1
	;誰的遺失物（発生条件：TARGETの信賴度が30以上）
	CASE 9
		RETURN 1
	;怎麼也找不到(そのまま落ちてる)（発生条件：TARGETの信賴度が30以上）
	CASE 10
		RETURN 1
	;怎麼也找不到(誰かが拾ってる)（発生条件：TARGETの信賴度が30以上）
	CASE 11
		RETURN 1
	;懲らしめて！（発生条件：TARGETのCSVに戦闘能力が１以上ある場合）
	CASE 12
		RETURN 1
	;好吃的魚が食べたいなぁ（発生条件：若鷺姫以外）
	CASE 13
		RETURN 1
	;現状無し
	CASEELSE
		RETURN 1
ENDSELECT




@M_KOJO_少女長_IRAI_K15(ROLE, SCENE, IRAI_ID)
#DIMS ROLE     ;角色の立場、依頼者かそうでないか
#DIMS SCENE    ;セリフの表示されるタイミング
#DIM  IRAI_ID  ;依頼自体のID
#DIM  CLIENT_ID;依頼者IDだけ抜き出したもの
#DIM  CHK_ID   ;依頼IDだけ抜き出したもの
CHK_ID    = IRAI_ID % 1000
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE ROLE
CASE "CLIENT"
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		CASE "一般依頼名"
			SELECTCASE SCENE
			CASE "依頼提示時"
			;依頼を持ち礦物碎片れる時
			CASE "依頼非受託時"
			;内容だけ見て受託しなかった時
			CASE "依頼受託時"
			;依頼を受託した時
			CASE "依頼確認時"
			;[366]で依頼内容を依頼人に確認した時
			CASE "依頼破棄時"
			;受託した依頼を破棄する時
			CASE "依頼実行直前"
			;[367]で依頼を実行する時、実行処理の前に呼び出される
			CASE "依頼実行直後"
			;[367]で依頼を実行する時、実行処理の後に呼び出される
			CASE "成功報告時"
			;報告時（成功）
			CASE "失敗報告時"
			;報告時（失敗）
			;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	
	;固有依頼
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
	;個々の依頼名で分岐
	;SCENEのWAITに関する仕様
	;WAIT無しでよい　　　　："依頼提示時", "依頼非受託時", "依頼確認時", "依頼破棄時", "成功報告時", "失敗報告時"
	;
	;以下の2つは実際にはCARRYOUTでの地の文処理との比較検討が必要
	;WAITを入れたほうが適切："依頼実行直前", "依頼実行直後"
	CASE "固有依頼名"
		SELECTCASE SCENE
		CASE "依頼提示時"
		;依頼を持ち礦物碎片れる時
		CASE "依頼非受託時"
		;内容だけ見て受託しなかった時
		CASE "依頼受託時"
		;依頼を受託した時
		CASE "依頼確認時"
		;[366]で依頼内容を依頼人に確認した時
		CASE "依頼破棄時"
		;受託した依頼を破棄する時
		CASE "依頼実行直前"
		;[367]で依頼を実行する時、実行処理の前に呼び出される
		CASE "依頼実行直後"
		;[367]で依頼を実行する時、実行処理の後に呼び出される
		CASE "成功報告時"
		;報告時（成功）
		CASE "失敗報告時"
		;報告時（失敗）
		;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
		ENDSELECT
	ENDSELECT
CASE "TARGET"
	;ここで表示されるSCENEは"依頼実行直前", "依頼実行直後"だけです
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		;個々の依頼名で分岐してください
		CASE "一般依頼名"
		;人物が鍵になっていた・もしくは場所にたまたま居合わせた
			SELECTCASE SCENE
			;TARGETが呼ばれるのはこのタイミングだけ
			CASE "依頼実行直前"
			CASE "依頼実行直後"
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE CSVCALLNAME(CLIENT_ID)
	;依頼者のCALLNAMEによる分岐（CSV準拠）
	CASE "依頼者"
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		CASE "固有依頼名"
			SELECTCASE SCENE
			CASE "依頼実行直前"
			CASE "依頼実行直後"
			ENDSELECT
		ENDSELECT
	ENDSELECT
CASE "NO_REPORT"
	;日数経過時、報告不要依頼を達成していた場合に呼ばれる口上
	;ここで表示されるSCENEは"依頼報告不要"だけです
	;SCENEが一つしか無いので分岐は不要
	;また、必ず依頼主の口上が呼ばれます
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		;個々の依頼名で分岐してください
		CASE "一般依頼名"
		CASE "給花澆水"
		CASE "誰的遺失物"
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
	CASE "固有依頼名"
	ENDSELECT
ENDSELECT
