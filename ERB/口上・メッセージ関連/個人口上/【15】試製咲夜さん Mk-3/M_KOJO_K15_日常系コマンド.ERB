;300,会話
;==================================================
@M_KOJO_MESSAGE_COM_K15_300
;命令通用消息(TRAIN_MESSAGE) 
;删除后「说的～话」就会消失
CALL TRAIN_MESSAGE
 ;口上主要呼出
CALL M_KOJO_MESSAGE_COM_K15_300_1
RETURN RESULT

@M_KOJO_MESSAGE_COM_K15_300_1
;-------------------------------------------------
;填写检查（=0, 非表示、1, 表示）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF TCVAR:302 && !TALENT:恋慕
		RETURN RESULT
	ELSEIF CFLAG:318 == 1
		;怒状態
		PRINTFORML 「………」
		PRINTFORML 咲夜默默地盯着这边、%CALLNAME:PLAYER%多次低头道歉
		RETURN RESULT
	ENDIF
	ELSEIF TFLAG:193 >= 0
		IF RAND:6 == 0
			IF TIME >= 360 && TIME <= 1080
				PRINTFORMW 「时间有点晚了呢……」
			ELSE
				PRINTFORMW 「刚才的饭怎么样？味道不错的话就好了」
			ENDIF
		ELSEIF RAND:5 == 0
			PRINTFORMW 「说起来，之前美铃在打瞌睡……」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「最近，大小姐休息得不好……」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「最近魔理沙又去偷书了，有什么对策吗」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「帕秋莉大人,好像离開图书馆跑去做运动了」
			PRINTFORMW 「好像想着再不运动就不行了，但有哮喘的老毛病……真是不如意啊」
		ELSE
			PRINTFORMW 「最近女仆妖精们很吵闹」
			PRINTFORMW 「每当%CALLNAME:MASTER%到来，我都会来报告……」		
		ENDIF
	ENDIF
RETURN 1
;==================================================
 ;301,泡茶
;==================================================
@M_KOJO_MESSAGE_COM_K15_301
CALL TRAIN_MESSAGE
CALL M_KOJO_MESSAGE_COM_K15_301_1
RETURN RESULT

@M_KOJO_MESSAGE_COM_K15_301_1
;-------------------------------------------------
;填写检查（=0, 非表示、1, 表示）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SIF TALENT:恋慕
		PRINTFORML 「哎呀，下次让我来泡茶吧?」
	IF TFLAG:193 == 1
		PRINTFORML 「……真美味」
		PRINTFORML 自言自语般的赞美之词是如此的诚实
		PRINTFORMW 对此感到满足的%CALLNAME:MASTER%、静静地与咲夜共饮
	ELSEIF TFLAG:193 == -1
		PRINTFORML 「……不行啊、这样的味道不能给大小姐喝」
		PRINTFORML 咲夜严肃地批评
		PRINTFORML 对这评价不满的%CALLNAME:MASTER%、把杯子夺了过来一口气喝完
		PRINTFORMW 那难吃的味道仿佛将%CALLNAME:MASTER%给冻结了、咲夜脸上露出了苦笑
	ELSE
		PRINTFORML 「嗯、合格了」
		PRINTFORMW 咲夜面带轻松的表情喝着红茶
	ENDIF
ENDIF
RETURN 1
