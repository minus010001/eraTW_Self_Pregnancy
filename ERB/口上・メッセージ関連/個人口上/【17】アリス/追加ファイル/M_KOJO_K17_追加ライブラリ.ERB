;反発
LOCAL -= (50 - 10000 / (SOURCE:ARG:反感 + 200))



;情緒に好感度上昇分追加
情緒上昇値 = MIN(ABL:ARG:親密 + 1,10) * LOCAL / 3
;路人がいると上昇量半減
SIF WITH_MOB()
	情緒上昇値 /= 2
i情緒 += MIN(情緒上昇値,200)
i情緒 = MIN(i情緒 , MAXBASE:ARG:情緒)

;理性を快感度分減少
i理性 -= LOCAL:1 * (GETPALAMLV(i欲情,10) + 1) / 4 * (i积攒度 + 1000) / 2000
i理性 = MAX(i理性 , 0 )
