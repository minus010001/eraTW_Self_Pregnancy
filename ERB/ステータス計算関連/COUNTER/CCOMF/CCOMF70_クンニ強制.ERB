;*********************************************************************************************
;Counter指令：強制舐陰
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF70(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_C,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	IF BEDROOM(CFLAG:MASTER:現在位置)
		SIF TEQUIP:ARG:0
			CALL DATUI_BOTTOM_T(ARG,0)
	ELSE
		SIF TEQUIP:ARG:0 & 14
			CALL DATUI_BOTTOM_T(ARG,1)	
	ENDIF
	SOURCE:ARG:快Ｃ = 100
	SOURCE:ARG:性行動 += 300
	SOURCE:ARG:征服 += 500
	SOURCE:ARG:液体 += 60
	SOURCE:ARG:誘惑 += 100
	SOURCE:ARG:挑発 += 100
	SOURCE:ARG:強要 += 300
	SOURCE:ARG:加虐 += 30
	SOURCE:PLAYER:快Ｍ += 150
	STAIN:ARG:3 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:ARG:3
	EXP:PLAYER:口淫経験 ++
	TCVAR:ARG:嗜虐フラグ = 1
	CALL EVENT_COUNTER_POSE_69(ARG,2)

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	;CALL Counter挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE70(ARG)

	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:ARG:50 >= 0 || TEQUIP:ARG:51 >= 0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	;貞操帯、触手胖次を是てるとダメ
	SIF EQUIP:下半身内衣２ == 27 || EQUIP:下半身内衣２ == 28
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER70(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 脱衣強要

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + ABL:ARG:Ｃ感覚

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
