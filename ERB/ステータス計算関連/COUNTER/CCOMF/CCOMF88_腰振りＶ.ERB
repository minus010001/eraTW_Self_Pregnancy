;*********************************************************************************************
;Counter指令：腰振りＶ
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF88(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_V,1,ARG)
	TFLAG:MASTERのＰ挿入中 = 1
	TFLAG:MASTERのＣ使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	DOWNBASE:MASTER:体力 += 40
	DOWNBASE:MASTER:気力 += 80
	TCVAR:PLAYER:4 += 1000
	SOURCE:ARG:快Ｖ += 300
	SOURCE:ARG:情愛 += 200
	SOURCE:ARG:性行動 += 500
	SOURCE:ARG:達成 += 200
	SOURCE:ARG:征服 += 500
	SOURCE:ARG:加虐 += 100
	TCVAR:116 = PLAYER
	TCVAR:ARG:嗜虐フラグ = 1
	CALL PAIN_CHECK_V(ARG)
	;射精部位（1=膣内 2=肛門 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(PLAYER, ARG, 1)
	EXP:ARG:Ｖ性交経験 ++
	EXP:PLAYER:挿入経験 ++
	EXP:ARG:愛情経験 += TALENT:ARG:恋慕
	TEQUIP:ARG:50 = MASTER
	;奉仕FLAG
	TCVAR:ARG:108 = 1

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	;CALL Counter挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE88(ARG)

	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:勃起 < 1000
		RETURN 0
	SIF TEQUIP:ARG:50 < 0
		RETURN 0
	SIF !(TEQUIP:50 >= 0 || TEQUIP:51 >= 0)
		RETURN 0
	SIF TCVAR:ARG:100 != PLAYER
		RETURN 0
	SIF ABL:ARG:腰 < 2
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER88(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 性交

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + (ABL:ARG:奉仕精神 + ABL:ARG:Ｖ感覚) * 2
	
	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
