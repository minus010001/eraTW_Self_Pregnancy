;*********************************************************************************************
;Counter指令：Ａ挿入させる
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF87(ARG)

	;体勢の変更
	;=============================
	SIF MASTER_POSE(0,SET_V) == ARG || MASTER_POSE(0,SET_A) == ARG
		CALL TOUCH_RESET_T(ARG)
	CALL TOUCH_SET(SET_FROM_A,1,ARG)
	TFLAG:MASTERのＰ挿入中 = 1
	TFLAG:MASTERのＣ使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	SIF TEQUIP:PLAYER:0
		CALL DATUI_BOTTOM(ARG,0)
	CALL DATUI_FOR_INSERT(ARG)
	TCVAR:ARG:Ａ喪失発生 = 1
	TCVAR:PLAYER:童貞喪失 = 1
	SOURCE:ARG:液体 += 100
	DOWNBASE:ARG:体力 += 60
	DOWNBASE:ARG:気力 += 150
	SOURCE:ARG:快Ａ = 500
	SOURCE:ARG:情愛 = 150
	SOURCE:ARG:性行動 = 500
	SOURCE:ARG:達成 = 300
	SOURCE:ARG:苦痛 = 400
	SOURCE:ARG:露出 = 60
	SOURCE:ARG:征服 += 700
	SOURCE:ARG:強要 += 200
	SOURCE:ARG:加虐 += 300
	TCVAR:116 = PLAYER
	CALL PAIN_CHECK_A(ARG)
	CALL LOST_VIRGIN(ARG)
	;射精部位（1=膣内 2=肛門 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(PLAYER, ARG, 2)
	TEQUIP:ARG:体位 = 3
	;強度
	TCVAR:PLAYER:4 = 1000
	STAIN:ARG:7 |= STAIN:PLAYER:2
	STAIN:PLAYER:2 |= STAIN:ARG:7
	EXP:ARG:Ａ性交経験 ++
	EXP:PLAYER:挿入経験 ++
	EXP:ARG:愛情経験 += TALENT:ARG:恋慕
	TEQUIP:ARG:51 = MASTER
	;奉仕FLAG
	TCVAR:ARG:108 = 1
	TCVAR:ARG:嗜虐フラグ = 1

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	;CALL Counter挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE87(ARG)

	SIF 挿入不可(ARG) >= 2
		RETURN 0
	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:勃起 < 1000
		RETURN 0
	SIF TALENT:ARG:妊娠 && (CFLAG:ARG:903 <= 30 || CFLAG:ARG:903 >= 71)
		RETURN 0
	SIF CFLAG:ARG:育児人数 >= 1 && CFLAG:ARG:育児人数 <= 30
		RETURN 0
	SIF ABL:2 < 3
		RETURN 0
	SIF TFLAG:63
		RETURN 0
	SIF TEQUIP:50 >= 0 || TEQUIP:51 >= 0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF TEQUIP:ARG:体位
		RETURN 0
	SIF PALAM:ARG:潤滑 < PALAMLV:3
		RETURN 0
	SIF TEQUIP:ARG:肛用振動棒
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER87(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 性交

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + ABL:ARG:Ａ感覚 * 3+ EX:ARG:Ａ寸止め * 10

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
