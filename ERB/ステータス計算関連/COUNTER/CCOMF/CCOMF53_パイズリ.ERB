;*********************************************************************************************
;Counter指令：乳交
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF53(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_B,1,ARG)
	TFLAG:MASTERのＣ使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	SIF TEQUIP:PLAYER:0 > 1
		CALL DATUI_BOTTOM(ARG,0)
	SIF TEQUIP:ARG:1 > 1
		CALL DATUI_TOP_T(ARG,0)
	SOURCE:ARG:性行動 += 400
	SOURCE:ARG:快Ｂ = 50
	SOURCE:ARG:誘惑 += 800
	SOURCE:ARG:挑発 += 400
	SOURCE:ARG:奉仕 += 800
	SOURCE:ARG:強要 += 200
	SOURCE:ARG:征服 += 500
	;射精部位（1=膣内 2=肛門 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(PLAYER, ARG, 5)
	;強度
	TCVAR:PLAYER:4 += 1000
	EXP:ARG:乳交経験 += 2
	;奉仕FLAG
	TCVAR:ARG:108 = 1
	CALL EVENT_COUNTER_POSE_69(ARG,2)

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	;CALL Counter挿入され継続中処理(ARG)
	;複数人がありうるのでこれは………あり得ないのでは？
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE53(ARG)

		SIF TFLAG:62
			RETURN 0
		SIF ABL:ARG:胸 < 1
			RETURN 0
		SIF !(TALENT:PLAYER:2 & 2)
			RETURN 0
		;[絶壁]だと不可 と思っていたのか
		;SIF TALENT:ARG:胸圍 == -2
		;	RETURN 0
		;[爆乳]なら技巧LV1以上、[巨乳]でなければ技巧3以上、[貧乳]だと技巧4以上必要
		SIF TALENT:ARG:胸圍 + ABL:ARG:技巧 < 3
			RETURN 0
		SIF TEQUIP:ARG:50 >= 0 || TEQUIP:ARG:51 >= 0
			RETURN 0
		SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
			RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER53(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 脱衣愛撫

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + TALENT:ARG:胸圍 + 2 * TALENT:ARG:淫乳 + 5 * ABL:ARG:胸 + BASE:MASTER:勃起 / 500

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
