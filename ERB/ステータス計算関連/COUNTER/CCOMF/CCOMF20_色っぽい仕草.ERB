;*********************************************************************************************
;Counter指令：色っぽい仕草
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF20(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 150
	SOURCE:ARG:挑発 += 50

	;マ斯塔Counter制御
	;=============================
	;無

RETURN 1

