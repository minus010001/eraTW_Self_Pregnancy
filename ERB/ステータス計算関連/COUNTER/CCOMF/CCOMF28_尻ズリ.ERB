;*********************************************************************************************
;Counter指令：尻ズリ
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF28(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 200
	SOURCE:ARG:強要 += 200
	SOURCE:ARG:征服 += 400
	SOURCE:ARG:快Ｃ += 50
	TCVAR:ARG:嗜虐フラグ = 1

	;マ斯塔Counter制御
	;=============================
	;無

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE28(ARG)

	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF TFLAG:64
		RETURN 0
	SIF BASE:ARG:勃起 < 500
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER28(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = ソフト

	;実行判定値算出式
	;=============================
	LOCAL = (基本値*10/8) + CFLAG:ARG:積極性 + CFLAG:ARG:攻 - CFLAG:ARG:害羞 + MAX(EXP:ARG:射精経験 / 15, 8)

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
