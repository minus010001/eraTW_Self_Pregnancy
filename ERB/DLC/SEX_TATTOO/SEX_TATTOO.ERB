							WEND
							CALL a_resetcolor, alpha
							CLEARLINE LINECOUNT - line:1
						ELSE
							PRINTL 金钱不足
							TWAIT 1000, 0
						ENDIF
					CASE 3
						mod = 1
						end_act = 1
				ENDSELECT
		ENDSELECT
		TWAIT 15, 0
		CLEARLINE LINECOUNT - line
	WEND
