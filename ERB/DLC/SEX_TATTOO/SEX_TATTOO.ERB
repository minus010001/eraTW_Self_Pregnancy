											alpha:1 -= 50
											IF alpha:1 < 255
												BREAK
											ENDIF
										ELSE
											alpha:1 = 0
											BREAK
										ENDIF
									;输入
									CASE 2
										INPUT
										CLEARLINE 1
										DEBUGPRINTFORML 输入结果是{RESULT}
										SELECTCASE RESULT
											CASE 0
												c_mod = 1
											CASE 1
												;扣钱
												MONEY -= 20000
												;清除烙印
												exist_st:target_id:0 = 0
												st_m_id:target_id:0 = 0
												VARSET st_a_lv:target_id:0, 0
												;————————————口上接口格式不对，暂且注释掉
												;CALL DISPLAY_KOJO_MESSAGE_SUB_EVENT, target_id, 1000
												c_mod = 1
												mod = 1
												end_act = 1
										ENDSELECT
								ENDSELECT
