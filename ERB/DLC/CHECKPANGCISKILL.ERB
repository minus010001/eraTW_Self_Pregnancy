@CHECKPANGCISKILL(OPPONENT, 敌特殊技能, 相手強さ, 相手残機, 相手B値, プレイヤーB値)
    #DIM OPPONENT
    #DIM 敌特殊技能
    #DIM 相手強さ
    #DIM 相手残機
    #DIM 相手B値
    #DIM プレイヤーB値
	IF 敌特殊技能 == 1
        IF RAND:100 + 1 < 30 + 相手強さ * 2
            LOCAL:1 = 相手強さ * 200
            相手B値 += LOCAL:1
            SETCOLOR C_RED
                PRINTFORML %CALLNAME:OPPONENT%的【蓝！白！碗！】发动！
                PRINTFORMW %CALLNAME:OPPONENT%のB値が+{LOCAL:1}された！
            RESETCOLOR
            ;口上呼び出し
            CALL KOJO_MESSAGE_SEND("DANMAKU", 相手残機, OPPONENT, -1, -1, "乾坤一擲")
            LOCAL = 相手B値 - プレイヤーB値
        ENDIF
    ELSEIF 敌特殊技能 == 2
        IF RAND:100 + 1 < 10 + 相手強さ * 2
            LOCAL:1 = 相手強さ * 300
            相手B値 += LOCAL:1
            SETCOLOR C_RED
                PRINTFORML %CALLNAME:OPPONENT%的【调教时间！】发动！
                PRINTFORMW %CALLNAME:OPPONENT%のB値が+{LOCAL:1}された！
            RESETCOLOR
            ;口上呼び出し
            CALL KOJO_MESSAGE_SEND("DANMAKU", 相手残機, OPPONENT, -1, -1, "乾坤一擲")
            LOCAL = 相手B値 - プレイヤーB値
        ENDIF
    ELSEIF 敌特殊技能 == 3
        IF RAND:100 + 1 < 50 + 相手強さ * 2
            LOCAL:1 = 相手強さ * 100
            相手B値 += LOCAL:1
            SETCOLOR C_RED
                PRINTFORML %CALLNAME:OPPONENT%的【透明人间】发动！
                PRINTFORMW %CALLNAME:OPPONENT%のB値が+{LOCAL:1}された！
            RESETCOLOR
            ;口上呼び出し
            CALL KOJO_MESSAGE_SEND("DANMAKU", 相手残機, OPPONENT, -1, -1, "乾坤一擲")
            LOCAL = 相手B値 - プレイヤーB値
        ENDIF
    ENDIF