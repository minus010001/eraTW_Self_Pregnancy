			IF DAY:2 == 2
				LOCAL = 2
			ELSEIF DAY:2 == 4
				LOCAL = 2
			ELSEIF DAY:2 == 3
				LOCAL = 5
			ELSE
				LOCAL = 3
		ENDIF
